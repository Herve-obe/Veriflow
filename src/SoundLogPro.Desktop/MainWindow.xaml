<Window x:Class="SoundLogPro.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SoundLogPro.Desktop"
        mc:Ignorable="d"
        Title="SoundLog Pro" Height="768" Width="1024"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <materialDesign:Card Grid.Column="0" Margin="0" Padding="0" UniformCornerRadius="0" Background="{DynamicResource MaterialDesignPaper}">
            <StackPanel Margin="10">
                <TextBlock Text="SOUNDLOG PRO" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                
                <Button Content="PLAYER / META" Margin="0,5" Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left"/>
                <Button Content="OFFLOAD" Margin="0,5" Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left"/>
                <Button Content="RAPPORTS" Margin="0,5" Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left"/>
            </StackPanel>
        </materialDesign:Card>

        <Border Grid.Column="1" Background="{DynamicResource MaterialDesignBackground}" Padding="20">
            <TextBlock Text="Bienvenue sur SoundLog Pro" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
        </Border>
    </Grid>
</Window>