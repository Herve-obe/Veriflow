<Window x:Class="Veriflow.Desktop.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Veriflow Splash" Height="350" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True">

    <Border Background="#121212" CornerRadius="12" BorderBrush="#333" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main Content -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Logo PlaceHolder -->
                <Image x:Name="LogoImage" Height="128" Margin="0,0,0,24" RenderOptions.BitmapScalingMode="HighQuality"/>
                
                <TextBlock Text="Veriflow" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource Brush.Accent}"
                           HorizontalAlignment="Center"
                           x:Name="TitleText"/>
                
                <TextBlock Text="PROFESSIONAL MEDIA VERIFICATION" 
                           Foreground="#888" 
                           FontSize="14" 
                           FontWeight="Regular" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Footer / Status -->
            <StackPanel Grid.Row="1" Margin="40,0,40,40">
                <Grid Margin="0,0,0,10">
                    <TextBlock x:Name="StatusText" 
                               Text="Initializing..." 
                               Foreground="#666" 
                               FontSize="12"/>
                    <TextBlock Text="Version 1.7.0 (Beta)" 
                               Foreground="{DynamicResource Brush.Text.Muted}"
                               FontSize="{StaticResource Font.Size.Body}"
                               HorizontalAlignment="Right"/>
                </Grid>
                
                <!-- Progress Bar -->
                <ProgressBar x:Name="LoadingBar" 
                             Height="4" 
                             Background="#222" 
                             Foreground="#1A4CB1" 
                             BorderThickness="0"
                             Value="0" Maximum="100"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
