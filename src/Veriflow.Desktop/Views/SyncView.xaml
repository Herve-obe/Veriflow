                   Fill="{DynamicResource Brush.Accent}"
                   Height="20" Width="20" Stretch="Uniform"
                   VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="SYNC" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- MAIN CONTENT -->
        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>

            <!-- VIDEO POOL -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- HEADER: Unified Grey -->
                <TextBlock Text="VIDEO POOL" Foreground="#CCCCCC" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                
                <!-- Actions Grid -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Import Button: Square, Blue, No Icon -->
                    <!-- Import Button: Square, Blue, No Icon -->
                    <Button Grid.Column="0" Command="{Binding ImportVideoCommand}" Content="IMPORT VIDEO" Width="125" Style="{StaticResource ContextualActionButtonStyle}"/>
                    
                    <!-- Clear List Button: Square, Logic Fixed -->
                    <!-- Clear List Button: Square, Logic Fixed -->
                    <Button Grid.Column="2" Command="{Binding ClearVideoPoolCommand}" Content="CLEAR LIST" Width="125">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ContextualActionButtonStyle}">
                                <Style.Triggers>
                                    <!-- Default: Count=0 -> Disabled (Gray) -->
                                    <DataTrigger Binding="{Binding VideoPool.Count}" Value="0">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Drop Zone & List -->
                <Border Grid.Row="2" Background="{StaticResource Brush.Panel.Darker}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="4" AllowDrop="True">
                     <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Drop">
                            <i:InvokeCommandAction Command="{Binding DropVideoCommand}" PassEventArgsToCommand="True"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    
                    <Grid>
                        <!-- Empty State Hint -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                                    Visibility="{Binding VideoPool.Count, Converter={x:Static local:Converters.ZeroToVisibleConverter}}">
                             <TextBlock Text="DROP VIDEO MEDIA FILES HERE" Foreground="{StaticResource Brush.Text.Disabled}" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <ListBox ItemsSource="{Binding VideoPool}" Background="Transparent" BorderThickness="0" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" Padding="5">
                             <ListBox.Resources>
                                 <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource MinimalistScrollBar}"/>
                             </ListBox.Resources>
                             <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="2"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderThickness="0" CornerRadius="2" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.Panel.Lighter}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.Control}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Filename}" Foreground="{StaticResource Brush.Text.Bright}" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding StartTimecode}" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="10" FontFamily="Consolas" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Duration}" Foreground="{StaticResource Brush.Text.Tertiary}" FontSize="10"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Delete Button (Hover Only) -->
                                        <!-- Using RelativeSource AncestorType=UserControl to safely bind to ViewModel -->
                                        <Button Grid.Column="1" Command="{Binding DataContext.RemoveVideoItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}"
                                                Width="20" Height="20" Background="Transparent" BorderThickness="0" Margin="5,0,0,0">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="Transparent">
                                                                     <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                                                           Fill="{StaticResource Brush.Text.Tertiary}" Height="10" Width="10" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                         <Setter Property="Cursor" Value="Hand"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>

            <!-- AUDIO POOL -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- HEADER: Unified Grey -->
                <TextBlock Text="AUDIO POOL" Foreground="#CCCCCC" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Left"/>

                <!-- Actions Grid -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                     <!-- Import Button: Square, Blue, No Icon -->
                    <!-- Import Button: Square, Blue, No Icon -->
                    <Button Grid.Column="0" Command="{Binding ImportAudioCommand}" Content="IMPORT AUDIO" Width="125" Style="{StaticResource ContextualActionButtonStyle}"/>
                    
                    <!-- Clear List Button: Square, Logic Fixed -->
                    <!-- Clear List Button: Square, Logic Fixed -->
                    <Button Grid.Column="2" Command="{Binding ClearAudioPoolCommand}" Content="CLEAR LIST" Width="125">
                         <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ContextualActionButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AudioPool.Count}" Value="0">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                
                <Border Grid.Row="2" Background="{StaticResource Brush.Panel.Darker}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="4" AllowDrop="True">
                     <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Drop">
                            <i:InvokeCommandAction Command="{Binding DropAudioCommand}" PassEventArgsToCommand="True"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    
                     <Grid>
                        <!-- Empty State Hint -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                                    Visibility="{Binding AudioPool.Count, Converter={x:Static local:Converters.ZeroToVisibleConverter}}">
                             <TextBlock Text="DROP AUDIO MEDIA FILES HERE" Foreground="{StaticResource Brush.Text.Disabled}" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <ListBox ItemsSource="{Binding AudioPool}" Background="Transparent" BorderThickness="0" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" Padding="5">
                             <ListBox.Resources>
                                 <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource MinimalistScrollBar}"/>
                             </ListBox.Resources>
                             <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="2"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderThickness="0" CornerRadius="2" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.Panel.Lighter}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.Control}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                             <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Filename}" Foreground="{StaticResource Brush.Text.Bright}" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding StartTimecode}" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="10" FontFamily="Consolas" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Duration}" Foreground="{StaticResource Brush.Text.Tertiary}" FontSize="10"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Delete Button (Hover Only) -->
                                        <!-- Using RelativeSource AncestorType=UserControl to safely bind to ViewModel -->
                                        <Button Grid.Column="1" Command="{Binding DataContext.RemoveAudioItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}"
                                                Width="20" Height="20" Background="Transparent" BorderThickness="0" Margin="5,0,0,0">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="Transparent">
                                                                     <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                                                           Fill="{StaticResource Brush.Text.Tertiary}" Height="10" Width="10" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                         <Setter Property="Cursor" Value="Hand"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- MATCHES -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- HEADER: Unified Grey -->
                <TextBlock Text="MATCHED PAIRS" Foreground="#CCCCCC" FontWeight="Bold" Margin="0,0,0,10" VerticalAlignment="Top"/>
                
                <!-- SYNC METHOD BUTTONS -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" Command="{Binding AutoMatchByTimecodeCommand}" Style="{StaticResource ContextualActionButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ•" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="SYNC BY TIMECODE" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Grid.Column="2" Command="{Binding AutoMatchByWaveformCommand}" Style="{StaticResource ContextualActionButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M2,12 L4,8 L6,14 L8,6 L10,16 L12,10 L14,12 L16,9 L18,13 L20,11 L22,12" 
                                  Stroke="{DynamicResource Brush.Accent}" 
                                  StrokeThickness="2" 
                                  Fill="Transparent"
                                  Height="14" Width="20" 
                                  Stretch="Uniform" 
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Center"/>
                            <TextBlock Text="SYNC BY WAVEFORM" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                
                <!-- Pushing List down to align with others approximately (Header + Button hole) 
                     Actually, Matches takes full height. -->

                <DataGrid Grid.Row="2" ItemsSource="{Binding Matches}" AutoGenerateColumns="False" 
                          Background="{StaticResource Brush.Panel.Darker}" RowBackground="Transparent" 
                          BorderThickness="1" BorderBrush="{StaticResource Brush.Border}"
                          GridLinesVisibility="None" HorizontalGridLinesBrush="{StaticResource Brush.Border}"
                          HeadersVisibility="Column" ColumnHeaderHeight="30"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
                          SelectionMode="Single" SelectionUnit="FullRow"
                          CanUserResizeColumns="False" CanUserReorderColumns="False" CanUserSortColumns="True"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          EnableRowVirtualization="True"
                          EnableColumnVirtualization="True">
                     <DataGrid.Resources>
                        <!-- Apply Minimalist ScrollBar locally to this DataGrid -->
                        <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource MinimalistScrollBar}"/>

                        <!-- FORCE SELECTION COLORS -->
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#505050"/> <!-- Lighter Gray for Selection -->
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#505050"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>

                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource Brush.Panel.Header}"/>
                            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource Brush.Control.Hover}"/>
                            <Setter Property="Height" Value="30"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Content -->
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                
                                                <!-- Sort Indicators (Always present, visibility toggled) -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="6,0,0,0">
                                                    <!-- Up Arrow -->
                                                    <Path x:Name="SortUp" Data="M 0 4 L 3.5 0 L 7 4 Z" Fill="{StaticResource Brush.Control.Hover}" Margin="0,0,0,2" Visibility="Visible"/>
                                                    <!-- Down Arrow -->
                                                    <Path x:Name="SortDown" Data="M 0 0 L 3.5 4 L 7 0 Z" Fill="{StaticResource Brush.Control.Hover}" Visibility="Visible"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!-- SORT ASCENDING: Hide Down, Highlight Up -->
                                            <Trigger Property="SortDirection" Value="Ascending">
                                                <Setter TargetName="SortDown" Property="Visibility" Value="Collapsed"/>
                                                <Setter TargetName="SortUp" Property="Fill" Value="White"/>
                                                <Setter TargetName="SortUp" Property="Margin" Value="0"/> <!-- Center vertically -->
                                            </Trigger>
                                            <!-- SORT DESCENDING: Hide Up, Highlight Down -->
                                            <Trigger Property="SortDirection" Value="Descending">
                                                <Setter TargetName="SortUp" Property="Visibility" Value="Collapsed"/>
                                                <Setter TargetName="SortDown" Property="Fill" Value="White"/>
                                                <Setter TargetName="SortDown" Property="Margin" Value="0"/> <!-- Center vertically -->
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                        
                        <!-- Specific Style for Centering Header (Inherits Template) -->
                        <Style x:Key="CenteredHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>

                         <!-- Empty Header Style for Delete Column (No Arrows) -->
                         <Style x:Key="NoSortHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                             <Setter Property="Template">
                                 <Setter.Value>
                                     <ControlTemplate TargetType="DataGridColumnHeader">
                                         <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                                             <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                         </Border>
                                     </ControlTemplate>
                                 </Setter.Value>
                             </Setter>
                         </Style>

                         <Style TargetType="DataGridCell">
                             <Setter Property="BorderThickness" Value="0"/>
                             <Setter Property="Padding" Value="10,8"/>
                             <Setter Property="Background" Value="Transparent"/>
                             <Setter Property="Template">
                                 <Setter.Value>
                                     <ControlTemplate TargetType="DataGridCell">
                                         <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                             <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                         </Border>
                                     </ControlTemplate>
                                 </Setter.Value>
                             </Setter>
                         </Style>
                         <Style TargetType="DataGridRow">
                             <Setter Property="Background" Value="Transparent"/>
                             <Setter Property="Foreground" Value="#CCCCCC"/>
                             <Setter Property="BorderThickness" Value="0"/>
                             <Style.Triggers>
                                 <Trigger Property="IsMouseOver" Value="True">
                                     <Setter Property="Background" Value="{StaticResource Brush.Panel.Hover}"/> <!-- Lighter Hover -->
                                 </Trigger>
                                 <Trigger Property="IsSelected" Value="True">
                                     <Setter Property="Background" Value="{StaticResource Brush.Panel.Selected}"/> <!-- Matches HighlightBrushKey -->
                                     <Setter Property="Foreground" Value="White"/>
                                 </Trigger>
                             </Style.Triggers>
                         </Style>
                    </DataGrid.Resources>

                     <DataGrid.Columns>
                        <DataGridTextColumn Header="VIDEO MASTER" Binding="{Binding Video.Filename}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="0,0,16,0"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="AUDIO SOURCE" Binding="{Binding Audio.Filename}" Width="0.75*">
                             <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="0,0,16,0"/>
                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="OFFSET" Binding="{Binding OffsetDisplay}" Width="110" Foreground="{DynamicResource Brush.Accent}" FontFamily="Consolas" HeaderStyle="{StaticResource CenteredHeaderStyle}">
                             <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="STATUS" Binding="{Binding Status}" Width="100" Foreground="#888888" HeaderStyle="{StaticResource CenteredHeaderStyle}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="SYNC METHOD" Binding="{Binding SyncMethodDisplay}" Width="130" Foreground="#AAAAAA" HeaderStyle="{StaticResource CenteredHeaderStyle}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Delete Action (Hover Only) -->
                        <DataGridTemplateColumn Width="40" CanUserSort="False" HeaderStyle="{StaticResource NoSortHeaderStyle}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.RemoveMatchItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}"
                                            Width="20" Height="20" Background="Transparent" BorderThickness="0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Visibility" Value="Hidden"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="Transparent">
