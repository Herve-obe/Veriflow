        <Border Grid.Row="2" Background="{StaticResource Brush.Text.Dark}" Margin="0,20,0,0" Padding="15" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0" VerticalAlignment="Center">
                     <Grid.RowDefinitions>
                         <RowDefinition Height="Auto"/>
                         <RowDefinition Height="Auto"/>
                     </Grid.RowDefinitions>
                     <TextBlock Text="EXPORT DESTINATION" Foreground="#CCCCCC" FontWeight="Bold" Margin="0,0,0,5"/>
                     <Grid Grid.Row="1">
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="35"/>
                         </Grid.ColumnDefinitions>
                         <TextBox Text="{Binding ExportDestination}" IsReadOnly="True" Background="{StaticResource Brush.Panel.Header}" BorderThickness="0" Foreground="White" Padding="8,6" VerticalAlignment="Stretch" VerticalContentAlignment="Center"/>
                         <Button Grid.Column="1" Command="{Binding SelectExportFolderCommand}" Content="..." Margin="5,0,0,0" Style="{StaticResource ActionButtonStyle}" Height="30" VerticalAlignment="Stretch"/>
                     </Grid>
                </Grid>

                <Button Grid.Column="2" Command="{Binding ClearAllCommand}" Content="CLEAR ALL" Width="120" VerticalAlignment="Bottom" Margin="0,0,0,1">
                     <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ContextualActionButtonStyle}">
                                <Style.Triggers>
                                    <!-- Logic: Disable only if ALL lists are empty -->
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding VideoPool.Count}" Value="0"/>
                                            <Condition Binding="{Binding AudioPool.Count}" Value="0"/>
                                            <Condition Binding="{Binding Matches.Count}" Value="0"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                </Button>
                
                <Button Grid.Column="4" Command="{Binding ExportBatchCommand}" Content="EXPORT ALL SYNCED" Height="26" Padding="20,0" Style="{StaticResource ContextualActionButtonStyle}" VerticalAlignment="Bottom" Margin="0,0,0,1"/>
            </Grid>
        </Border>
        
        <!-- PROGRESS OVERLAY -->
        <Grid Grid.RowSpan="3" Background="#AA000000" Visibility="{Binding IsBusy, Converter={x:Static local:Converters.BooleanToVisibilityConverter}}">
             <Border Background="{StaticResource Brush.Panel.Header}" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="400">
                 <StackPanel>
                     <TextBlock Text="PROCESSING" Foreground="{DynamicResource Brush.Accent}" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                     
                     <ProgressBar Value="{Binding ProgressValue}" Maximum="100" Height="10" Background="{StaticResource Brush.Control}" Foreground="{DynamicResource Brush.Accent}" BorderThickness="0"/>
                     <TextBlock Text="{Binding BusyMessage}" Foreground="{StaticResource Brush.Text.Secondary}" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                 </StackPanel>
             </Border>
        </Grid>
    </Grid>
