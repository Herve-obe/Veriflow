<Window x:Class="Veriflow.Desktop.Views.VideoPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="Video Preview"
        ResizeMode="CanResize"
        Topmost="True"
        ShowInTaskbar="False"
        SizeToContent="Manual"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded"
        Style="{StaticResource Style.Window.Dialog}">
    
    <Border BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <!-- Content Only -->
            <Grid Background="{StaticResource Brush.Panel}">
                <vlc:VideoView x:Name="VideoViewControl" MediaPlayer="{Binding PreviewPlayer}"/>
            </Grid>
        </Grid>
    </Border>
</Window>
