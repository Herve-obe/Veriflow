<UserControl x:Class="Veriflow.Desktop.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
             xmlns:conv="clr-namespace:Veriflow.Desktop.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1024">
    <UserControl.Resources>
        <conv:PercentToPositionConverter x:Key="PercentToPositionConverter"/>

        <!-- Mute Button Style -->
        <Style x:Key="DawMuteButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="#333333" CornerRadius="2" BorderBrush="#111111" BorderThickness="1">
                            <TextBlock Text="M" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D32F2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Solo Button Style -->
        <Style x:Key="DawSoloButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="#333333" CornerRadius="2" BorderBrush="#111111" BorderThickness="1">
                            <TextBlock x:Name="txt" Text="S" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FBC02D"/>
                                <Setter TargetName="txt" Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20" AllowDrop="True" Background="Transparent">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Drop">
                <i:InvokeCommandAction Command="{Binding DropFileCommand}" PassEventArgsToCommand="True" />
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>   <!-- Console (Left) -->
            <ColumnDefinition Width="350"/>  <!-- Metadata (Right) -->
        </Grid.ColumnDefinitions>

        <!-- LEFT COLUMN: CONSOLE -->
        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Transport -->
                <RowDefinition Height="30"/>   <!-- Ruler Header -->
                <RowDefinition Height="*"/>    <!-- Tracks -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="DERUSH / CONSOLE" Style="{StaticResource MaterialDesignOverlineTextBlock}"/>
                        <TextBlock Text="{Binding FileName, TargetNullValue='Aucun fichier chargé'}" Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                        
                        <!-- Timecode Display -->
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                             <TextBlock Text="{Binding CurrentTimeDisplay}" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Foreground="{DynamicResource PrimaryHueLightBrush}"/>
                             <TextBlock Text=" / " Style="{StaticResource MaterialDesignHeadline4TextBlock}" Opacity="0.5"/>
                             <TextBlock Text="{Binding TotalTimeDisplay}" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Opacity="0.5"/>
                        </StackPanel>
                    </StackPanel>
                    <Button Grid.Column="1" Command="{Binding LoadFileCommand}" Content="IMPORT MÉDIA" Style="{StaticResource MaterialDesignOutlinedButton}" VerticalAlignment="Top" Focusable="False" Foreground="White" BorderBrush="White"/>
                </Grid>
            </materialDesign:Card>

            <!-- Transport Controls -->
            <Border Grid.Row="1" Background="Transparent" Margin="0,0,0,10" Padding="0" CornerRadius="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Transport Buttons (Aligned Left, Padding to match Card above) -->
                    <!-- Card has Padding 15. So we add Margin 15 left to align perfectly with the Timecode. -->
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="15,0,0,0">
                        <Button Command="{Binding StopCommand}" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" Margin="0,0,10,0" Background="IndianRed" BorderBrush="IndianRed" ToolTip="Stop" IsEnabled="True" Focusable="False">
                            <materialDesign:PackIcon Kind="Square" Width="16" Height="16"/>
                        </Button>
                        <Button Command="{Binding PlayCommand}" Style="{StaticResource MaterialDesignFloatingActionButton}" Margin="0,0,10,0" Height="50" Width="50" ToolTip="Play" Focusable="False">
                            <materialDesign:PackIcon Kind="Play" Width="28" Height="28"/>
                        </Button>
                        <Button Command="{Binding PauseCommand}" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" Background="Orange" BorderBrush="Orange" ToolTip="Pause" Focusable="False">
                             <materialDesign:PackIcon Kind="Pause" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Ruler / Column Headers -->
            <Grid Grid.Row="2" Background="Transparent" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="330"/> <!-- Fixed Info Column -->
                    <ColumnDefinition Width="*"/>   <!-- Audio/Ruler Column -->
                </Grid.ColumnDefinitions>

                <!-- Headers in Col 0 -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="NAME" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Opacity="0.5" FontSize="10" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="VOL" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.5" FontSize="10" FontWeight="Bold"/>
                    <TextBlock Grid.Column="2" Text="PAN" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.5" FontSize="10" FontWeight="Bold"/>
                </Grid>

                <!-- Ruler in Col 1 -->
                <Border Grid.Column="1" ClipToBounds="True" Margin="0" Background="Transparent" Cursor="Hand">
                     <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding SeekCommand}" PassEventArgsToCommand="True"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    
                    <Canvas x:Name="RulerCanvas" Background="Transparent">
                        <ItemsControl ItemsSource="{Binding RulerTicks}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas IsItemsHost="True"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left">
                                        <Setter.Value>
                                            <MultiBinding Converter="{StaticResource PercentToPositionConverter}">
                                                <Binding Path="Percent"/>
                                                <Binding ElementName="RulerCanvas" Path="ActualWidth"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!-- Tick Mark -->
                                        <Rectangle Width="1" Height="10" Fill="White" Opacity="0.3" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                                        <!-- Time Label -->
                                        <TextBlock Text="{Binding Label}" FontSize="9" Opacity="0.7" Margin="2,10,0,0" Foreground="White" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </Border>
            </Grid>

            <!-- Tracks List (Pro DAW Layout) + Overlay -->
            <!-- Wrapped in ScrollViewer -->
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Background="Transparent">
                <!-- Inner Grid sizes to Content, allowing Overlay to match ItemsControl Height exactly -->
                <Grid VerticalAlignment="Top">
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="330"/> <!-- Fixed Info Column -->
                        <ColumnDefinition Width="*"/>   <!-- Audio Column -->
                    </Grid.ColumnDefinitions>

                    <!-- Tracks Content (Spans both columns, but internal template handles split) -->
                    <!-- We actually need ItemsControl to span 2 cols, and the inner template to respect the split -->
                    <!-- Easier: Let ItemsControl take full width, and ItemTemplate uses same grid defs -->
                    <ItemsControl Grid.ColumnSpan="2" ItemsSource="{Binding Tracks}" Background="Transparent" BorderThickness="0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:TrackViewModel}">
                                <Border Background="#2E2E2E" Margin="0,0,0,1" BorderBrush="#111111" BorderThickness="0,0,0,2">
                                    <Grid Height="50">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="330"/> <!-- Info -->
                                            <ColumnDefinition Width="*"/>   <!-- Audio -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Info Column Content -->
                                        <Grid Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="70"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Col 0: Track Name -->
                                            <TextBlock Grid.Column="0" Text="{Binding TrackName}" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"
                                                   FontWeight="SemiBold" Foreground="#B0BEC5" 
                                                   TextTrimming="CharacterEllipsis" 
                                                   ToolTip="{Binding TrackName}" FontSize="11"/>

                                            <!-- Col 1: Volume Slider -->
                                            <Slider Grid.Column="1" Value="{Binding Volume}" 
                                                Minimum="0" Maximum="1" 
                                                VerticalAlignment="Center" Margin="5,0"
                                                AutoToolTipPlacement="None"
                                                ToolTip="Volume (Double-Click Reset)" Focusable="False">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="PreviewMouseDoubleClick">
                                                        <i:InvokeCommandAction Command="{Binding ResetVolumeCommand}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                                <Slider.Resources>
                                                    <Style TargetType="Thumb">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Thumb">
                                                                    <Border Background="#757575" BorderBrush="#424242" BorderThickness="1" Width="10" Height="20" CornerRadius="1"/>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Slider.Resources>
                                            </Slider>

                                            <!-- Col 2: Pan Slider -->
                                            <Slider Grid.Column="2" Value="{Binding Pan}" 
                                                Minimum="-1" Maximum="1" 
                                                VerticalAlignment="Center" Margin="5,0"
                                                AutoToolTipPlacement="None"
                                                ToolTip="Pan (Double-Click Reset)" Focusable="False">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="PreviewMouseDoubleClick">
                                                        <i:InvokeCommandAction Command="{Binding ResetPanCommand}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                                <Slider.Resources>
                                                    <Style TargetType="Thumb">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Thumb">
                                                                    <Ellipse Fill="#B0BEC5" Width="12" Height="12" Stroke="#424242" StrokeThickness="1"/>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Slider.Resources>
                                            </Slider>

                                            <!-- Col 3: Buttons (Mute/Solo) -->
                                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0">
                                                <ToggleButton IsChecked="{Binding IsMuted}"
                                                          Style="{StaticResource DawMuteButtonStyle}"
                                                          ToolTip="Mute" Focusable="False"/>

                                                <ToggleButton IsChecked="{Binding IsSoloed}"
                                                          Style="{StaticResource DawSoloButtonStyle}"
                                                          ToolTip="Solo" Focusable="False"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Audio Column Content (Waveform) -->
                                        <Border Grid.Column="1" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" ClipToBounds="True" Margin="0,2">
                                            <Viewbox Stretch="Fill">
                                                <Polyline Points="{Binding WaveformPoints}" 
                                                      Stroke="#B0BEC5" 
                                                      StrokeThickness="1"/>
                                            </Viewbox>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                
                    <!-- Overlay Canvas (Global Playhead & Interaction) -->
                    <!-- Sits in Col 1 (Audio) and spans full height of this container grid -->
                    <Grid Grid.Column="1" IsHitTestVisible="True" Background="Transparent">
                        <!-- Click-to-Seek Area -->
                        <Canvas Background="Transparent" x:Name="WaveformOverlay">
                             <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding SeekCommand}" PassEventArgsToCommand="True"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        
                            <!-- Playhead Line -->
                            <!-- Height binds to Canvas ActualHeight, which stretches to container -->
                            <Line Y1="0" Y2="{Binding ActualHeight, ElementName=WaveformOverlay}" 
                                  Stroke="White" StrokeThickness="1.5" Opacity="0.8">
                                <Line.X1>
                                    <MultiBinding Converter="{StaticResource PercentToPositionConverter}">
                                        <Binding Path="PlaybackPercent" />
                                        <Binding ElementName="WaveformOverlay" Path="ActualWidth"/>
                                    </MultiBinding>
                                </Line.X1>
                                <Line.X2>
                                    <MultiBinding Converter="{StaticResource PercentToPositionConverter}">
                                        <Binding Path="PlaybackPercent" />
                                        <Binding ElementName="WaveformOverlay" Path="ActualWidth"/>
                                    </MultiBinding>
                                </Line.X2>
                            </Line>
                        </Canvas>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>

        <!-- RIGHT COLUMN: METADATA -->
        <materialDesign:Card Grid.Column="1" Padding="15" VerticalAlignment="Stretch">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="MÉTADONNÉES" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,20"/>

                    <Grid Margin="0,5">
                         <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="SCÈNE" FontWeight="Bold" Opacity="0.6" Width="80"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.Scene}" TextWrapping="Wrap" FontSize="16" Foreground="White"/>
                    </Grid>
                    <Separator Margin="0,5"/>

                    <Grid Margin="0,5">
                         <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="PRISE" FontWeight="Bold" Opacity="0.6" Width="80"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.Take}" TextWrapping="Wrap" FontSize="16"/>
                    </Grid>
                     <Separator Margin="0,5"/>

                    <Grid Margin="0,5">
                         <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="TC DÉPART" FontWeight="Bold" Opacity="0.6" Width="80"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.TimecodeStart}" FontFamily="Consolas" FontSize="14"/>
                    </Grid>
                     <Separator Margin="0,5"/>
                    
                    <Grid Margin="0,5">
                         <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="DURÉE" FontWeight="Bold" Opacity="0.6" Width="80"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.Duration}" FontFamily="Consolas"/>
                    </Grid>
                    <Separator Margin="0,5"/>

                    <Grid Margin="0,5">
                         <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="FORMAT" FontWeight="Bold" Opacity="0.6" Width="80"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.Format}"/>
                    </Grid>
                    <Separator Margin="0,5"/>

                     <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ORIGINE" FontWeight="Bold" Opacity="0.6" Width="80"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.Originator}" TextWrapping="Wrap"/>
                    </Grid>
                    <Separator Margin="0,5"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="DATE" FontWeight="Bold" Opacity="0.6" Width="80"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.CreationDate}" TextWrapping="Wrap"/>
                    </Grid>
                     <Separator Margin="0,5"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="RUBAN" FontWeight="Bold" Opacity="0.6" Width="80"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.Tape}" TextWrapping="Wrap"/>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </materialDesign:Card>
    </Grid>
</UserControl>
