<UserControl x:Class="Veriflow.Desktop.Views.OffloadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
             
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <!-- NATIVE OPTICAL LAYOUT (1/Auto/2/Auto) -->
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>   <!-- TOP SPACE -->
            <RowDefinition Height="Auto"/> <!-- FORM -->
            <RowDefinition Height="2*"/>   <!-- BOTTOM SPACE -->
            <RowDefinition Height="Auto"/> <!-- FOOTER -->
        </Grid.RowDefinitions>

        <!-- FORM CONTENT -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" MaxWidth="1000" Width="800">
            
            <!-- SOURCE -->
            <Grid Margin="0,0,0,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <DockPanel LastChildFill="False" Margin="0,0,0,5">
                    <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                        <!-- SD Card Icon (Custom Image) -->
                        <Image Source="/Veriflow.Desktop;component/Assets/sdoclock.png"
                               Height="24" Stretch="Uniform"
                               VerticalAlignment="Center" Margin="0,0,8,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="SOURCE MÉDIA" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Global Reset Button -->
                    <Button DockPanel.Dock="Right" 
                            Command="{Binding ResetAllCommand}"
                            Content="RESET ALL" 
                            FontSize="10" 
                            FontWeight="Bold"
                            Background="Transparent" 
                            BorderThickness="0" 
                            Foreground="#FF4545" 
                            Cursor="Hand"
                            Padding="4,0"
                            VerticalAlignment="Center"/>
                </DockPanel>
                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Column="0" Margin="0,0,5,0">
                        <TextBox x:Name="SourceBox" Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}" AllowDrop="True">
                             <b:Interaction.Triggers>
                                <b:EventTrigger EventName="PreviewDragOver">
                                    <b:InvokeCommandAction Command="{Binding DragOverCommand}" PassEventArgsToCommand="True"/>
                                </b:EventTrigger>
                                <b:EventTrigger EventName="PreviewDrop">
                                    <b:InvokeCommandAction Command="{Binding DropSourceCommand}" PassEventArgsToCommand="True"/>
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </TextBox>
                        
                        <!-- Clear Button Source -->
                        <Button Command="{Binding ClearSourceCommand}"
                                Content="✕" FontSize="10" Foreground="#888" Background="Transparent" BorderThickness="0"
                                Cursor="Hand" Width="20" Height="20" HorizontalAlignment="Right" Margin="0,0,5,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=SourceBox}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text, ElementName=SourceBox}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                        </Button>
                    </Grid>
                    
                    <Button Grid.Column="1" Command="{Binding PickSourceCommand}" Content="OUVRIR" Style="{StaticResource ActionButtonStyle}"/>
                </Grid>
            </Grid>

            <!-- DESTINATIONS -->
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                     <!-- Hard Drive Icon (Custom Image) -->
                    <Image Source="/Veriflow.Desktop;component/Assets/hdd.png"
                           Height="24" Stretch="Uniform"
                           VerticalAlignment="Center" Margin="0,0,8,0"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="DESTINATION" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Dest A -->
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="DESTINATION PRINCIPALE (A)" Margin="0,0,0,3" Style="{StaticResource LabelStyle}" Opacity="0.5"/>
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid Grid.Column="0" Margin="0,0,5,0">
                            <TextBox x:Name="Dest1Box" Text="{Binding Destination1Path, UpdateSourceTrigger=PropertyChanged}" AllowDrop="True">
                                 <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="PreviewDragOver">
                                        <b:InvokeCommandAction Command="{Binding DragOverCommand}" PassEventArgsToCommand="True"/>
                                    </b:EventTrigger>
                                    <b:EventTrigger EventName="PreviewDrop">
                                        <b:InvokeCommandAction Command="{Binding DropDest1Command}" PassEventArgsToCommand="True"/>
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                            </TextBox>

                            <!-- Clear Button Dest 1 -->
                            <Button Command="{Binding ClearDest1Command}"
                                    Content="✕" FontSize="10" Foreground="#888" Background="Transparent" BorderThickness="0"
                                    Cursor="Hand" Width="20" Height="20" HorizontalAlignment="Right" Margin="0,0,5,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text.Length, ElementName=Dest1Box}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text, ElementName=Dest1Box}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                            </Button>
                        </Grid>

                        <Button Grid.Column="1" Command="{Binding PickDest1Command}" Content="OUVRIR" Style="{StaticResource ActionButtonStyle}"/>
                    </Grid>
                </Grid>

                <!-- Dest B -->
                <Grid>
                     <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="DESTINATION SECONDAIRE (B)" Margin="0,0,0,3" Style="{StaticResource LabelStyle}" Opacity="0.5"/>
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid Grid.Column="0" Margin="0,0,5,0">
                            <TextBox x:Name="Dest2Box" Text="{Binding Destination2Path, UpdateSourceTrigger=PropertyChanged}" AllowDrop="True">
                                 <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="PreviewDragOver">
                                        <b:InvokeCommandAction Command="{Binding DragOverCommand}" PassEventArgsToCommand="True"/>
                                    </b:EventTrigger>
                                    <b:EventTrigger EventName="PreviewDrop">
                                        <b:InvokeCommandAction Command="{Binding DropDest2Command}" PassEventArgsToCommand="True"/>
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                            </TextBox>

                            <!-- Clear Button Dest 2 -->
                            <Button Command="{Binding ClearDest2Command}"
                                    Content="✕" FontSize="10" Foreground="#888" Background="Transparent" BorderThickness="0"
                                    Cursor="Hand" Width="20" Height="20" HorizontalAlignment="Right" Margin="0,0,5,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text.Length, ElementName=Dest2Box}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text, ElementName=Dest2Box}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                            </Button>
                        </Grid>

                        <Button Grid.Column="1" Command="{Binding PickDest2Command}" Content="OUVRIR" Style="{StaticResource ActionButtonStyle}"/>
                    </Grid>
                </Grid>
            </StackPanel>
        </StackPanel>

        <!-- FOOTER ACTIONS -->
        <StackPanel Grid.Row="3" VerticalAlignment="Bottom" Margin="0,0,0,30">
            <Button Command="{Binding ToggleCopyCommand}" 
                    Margin="0,0,0,15"
                    HorizontalAlignment="Center" Width="400">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Content" Value="DÉMARRER LA COPIE"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                <Setter Property="Content" Value="ARRÊTER LA COPIE"/>
                                <Setter Property="Background" Value="#8B0000"/>
                                <Setter Property="BorderBrush" Value="#8B0000"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button> 
            
            <ProgressBar Value="{Binding ProgressValue}" Maximum="100" Height="4" Background="#222222" Foreground="{DynamicResource Brush.Accent}" BorderThickness="0" IsIndeterminate="False"/>
            
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentHashDisplay}" TextTrimming="CharacterEllipsis" Style="{StaticResource Style.Text.Mono}" FontSize="{StaticResource Font.Size.Small}" Foreground="{StaticResource Brush.Text}" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding LogText}" Margin="0,2,0,0" Style="{StaticResource BodyStyle}" FontSize="{StaticResource Font.Size.Small}" Foreground="{StaticResource Brush.Text}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                     <TextBlock Text="ETA: " FontWeight="Bold" Style="{StaticResource BodyStyle}" FontSize="{StaticResource Font.Size.Small}" Foreground="{StaticResource Brush.Text}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                     <TextBlock Text="{Binding TimeRemainingDisplay}" FontWeight="Bold" Style="{StaticResource Style.Text.Mono}" FontSize="{StaticResource Font.Size.Small}" Foreground="{StaticResource Brush.Text}" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Column="2" Text="{Binding CurrentSpeedDisplay}" 
                           FontWeight="Bold"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Style="{StaticResource Style.Text.Mono}" FontSize="{StaticResource Font.Size.Small}" Foreground="{StaticResource Brush.Text}"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
