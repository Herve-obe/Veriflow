<UserControl x:Class="Veriflow.Desktop.Views.OffloadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Section 1 : SOURCE -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <materialDesign:PackIcon Kind="FolderSearch" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="SOURCE MÉDIA" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                </StackPanel>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" Text="{Binding SourcePath}" IsReadOnly="True" 
                             materialDesign:HintAssist.Hint="Chemin du dossier source" 
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="1" Command="{Binding PickSourceCommand}" Content="CHOISIR LE DOSSIER" 
                            Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!-- Section 2 : DESTINATIONS -->
        <materialDesign:Card Grid.Row="1" Margin="0,0,0,20" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <materialDesign:PackIcon Kind="BackupRestore" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                    <TextBlock Text="BACKUP &amp; SÉCURISATION" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                </StackPanel>

                <!-- Destination A -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <materialDesign:PackIcon Grid.Column="0" Kind="Harddisk" VerticalAlignment="Center" Margin="0,0,15,0" Width="20" Height="20" Opacity="0.7"/>
                    
                    <TextBox Grid.Column="1" Text="{Binding Destination1Path}" IsReadOnly="True"
                             materialDesign:HintAssist.Hint="Destination Principale (A)" 
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="2" Command="{Binding PickDest1Command}" Content="CHOISIR" 
                            Style="{StaticResource MaterialDesignOutlinedButton}" VerticalAlignment="Center"/>
                </Grid>

                <!-- Destination B -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0" Kind="HarddiskPlus" VerticalAlignment="Center" Margin="0,0,15,0" Width="20" Height="20" Opacity="0.7"/>

                    <TextBox Grid.Column="1" Text="{Binding Destination2Path}" IsReadOnly="True"
                             materialDesign:HintAssist.Hint="Destination Secondaire (B) - Optionnel" 
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0" VerticalAlignment="Center"/>

                    <Button Grid.Column="2" Command="{Binding PickDest2Command}" Content="CHOISIR" 
                            Style="{StaticResource MaterialDesignOutlinedButton}" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!-- Spacer -->
        <Border Grid.Row="2"/>

        <!-- Section 3 : ACTIONS -->
        <StackPanel Grid.Row="3">
            <Button Command="{Binding StartCopyCommand}" Content="DÉMARRER LA COPIE" 
                    Height="50" FontSize="18" Margin="0,0,0,20" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="{DynamicResource SecondaryHueMidBrush}"
                    BorderBrush="{DynamicResource SecondaryHueMidBrush}"/>
            
            <ProgressBar Value="{Binding ProgressValue}" Maximum="100" Height="20" IsIndeterminate="False"/>
            
            <TextBlock Text="{Binding LogText}" Margin="0,10,0,0" Opacity="0.6" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
