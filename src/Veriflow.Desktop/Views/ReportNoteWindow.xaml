<Window x:Class="Veriflow.Desktop.Views.ReportNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Report Note" Height="350" Width="400"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#1E1E1E" BorderBrush="#444444" BorderThickness="1"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False" UseLayoutRounding="True">
    
    <Window.Resources>
        <Style TargetType="TextBox" BasedOn="{StaticResource Style.TextBox.Form}"/>
        <Style TargetType="TextBlock" BasedOn="{StaticResource Style.Text.Label}"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="Auto"/> <!-- Scene / Take -->
            <RowDefinition Height="Auto"/> <!-- Good Take -->
            <RowDefinition Height="*"/>    <!-- Notes -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="EDIT REPORT NOTE" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Scene / Take -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="SCENE" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Scene, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="TAKE" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Take, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </Grid>

        <!-- Good Take -->
        <CheckBox Grid.Row="2" Content="GOOD TAKE (CIRCLE)" IsChecked="{Binding IsCircled}" Foreground="White" Margin="0,0,0,15">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
            </CheckBox.LayoutTransform>
        </CheckBox>

        <!-- Notes -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="NOTES" Margin="0,0,0,5"/>
            <!-- Notes field expands to fill remaining space, with min height -->
            <TextBox Text="{Binding ItemNotes, UpdateSourceTrigger=PropertyChanged}" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="CANCEL" Click="Cancel_Click" Style="{StaticResource Style.Button.Secondary}" Width="80" Height="30" Margin="0,0,10,0"/>
            <!-- Uses Style.Button.Primary which links to DynamicResource Brush.Accent (Blue in Video Mode) -->
            <Button Content="SAVE" Click="Save_Click" Style="{StaticResource Style.Button.Primary}" Width="80" Height="30" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
