<UserControl x:Class="Veriflow.Desktop.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
             xmlns:conv="clr-namespace:Veriflow.Desktop.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1024"
             Focusable="True"
             FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}">
    <!-- InputBindings removed -->

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <conv:PercentToPositionConverter x:Key="PercentToPositionConverter"/>

        <!-- DataGrid Resources (Copied from TranscodeView) -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="6,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                    <Path x:Name="SortArrow"
                                          Grid.Column="1"
                                          Data="M0,0 L10,0 L5,5 z"
                                          Fill="#AAA"
                                          Margin="5,0,0,0"
                                          VerticalAlignment="Center"
                                          Visibility="Collapsed"
                                          Stretch="Fill" 
                                          Width="8" Height="6"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="SortDirection" Value="Ascending">
                                <Setter TargetName="SortArrow" Property="Visibility" Value="Visible" />
                                <Setter TargetName="SortArrow" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="180" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="SortDirection" Value="Descending">
                                <Setter TargetName="SortArrow" Property="Visibility" Value="Visible" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#444"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#444"/>
                </Trigger>
            </Style.Triggers>
        </Style>


         <Style x:Key="ClearInfoButtonStyle" TargetType="Button" BasedOn="{StaticResource Style.Button.Secondary}">
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding ReportTitle}" Value="CAMERA REPORT"/>
                        <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#1A4CB1"/>
                    <Setter Property="BorderBrush" Value="#1A4CB1"/>
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding ReportTitle}" Value="SOUND REPORT"/>
                        <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#D32F2F"/>
                    <Setter Property="BorderBrush" Value="#D32F2F"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Mute Button Style -->
        <Style x:Key="DawMuteButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{DynamicResource Brush.Control}" CornerRadius="2" BorderBrush="{DynamicResource Brush.Text.Dark}" BorderThickness="1">
                            <TextBlock Text="M" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{StaticResource Font.Size.Mini}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource Brush.State.Mute}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Solo Button Style -->
        <Style x:Key="DawSoloButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{DynamicResource Brush.Control}" CornerRadius="2" BorderBrush="{DynamicResource Brush.Text.Dark}" BorderThickness="1">
                            <TextBlock x:Name="txt" Text="S" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{StaticResource Font.Size.Mini}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource Brush.State.Solo}"/>
                                <Setter TargetName="txt" Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Modern Transport Button Base Style -->
        <Style x:Key="Style.Transport.Base" TargetType="Button">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="circle" Fill="Transparent" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="2"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="circle" Property="Fill" Value="{Binding BorderBrush, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <Setter Property="Foreground" Value="#111111"/> 
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="circle" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <!-- NEW: Trigger based on Binding (passed via Tag) -->
                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="True">
                                <Setter TargetName="circle" Property="Fill" Value="{Binding BorderBrush, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <Setter Property="Foreground" Value="#111111"/> 
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Red Stop Button -->
        <Style x:Key="Style.Transport.Stop" TargetType="Button" BasedOn="{StaticResource Style.Transport.Base}">
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Transport.Stop}"/> <!-- Red Accent -->
            <Setter Property="Foreground" Value="{DynamicResource Brush.Transport.Stop}"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <!-- Green Play Button -->
        <Style x:Key="Style.Transport.Play" TargetType="Button" BasedOn="{StaticResource Style.Transport.Base}">
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Transport.Play}"/> <!-- Green Accent -->
            <Setter Property="Foreground" Value="{DynamicResource Brush.Transport.Play}"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
        </Style>

        <!-- Yellow Pause Button -->
        <Style x:Key="Style.Transport.Pause" TargetType="Button" BasedOn="{StaticResource Style.Transport.Base}">
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Transport.Pause}"/> <!-- Yellow Accent -->
            <Setter Property="Foreground" Value="{DynamicResource Brush.Transport.Pause}"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <!-- Round Slider Style -->
        <Style x:Key="RoundSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Bright}"/>
            <Setter Property="IsSelectionRangeEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.Resources>
                                <!-- Transparent RepeatButton Template to prevent hover effects -->
                                <Style x:Key="TransparentRepeatButtonStyle" TargetType="RepeatButton">
                                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="IsTabStop" Value="False"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Rectangle Fill="{TemplateBinding Background}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>

                                <!-- Blue RepeatButton Template for Filled Track -->
                                <Style x:Key="BlueTrackRepeatButtonStyle" TargetType="RepeatButton">
                                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                                    <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="IsTabStop" Value="False"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Rectangle Fill="{TemplateBinding Background}" Height="2" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Grid.Resources>
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="26"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Track Layer -->
                            <Border x:Name="TrackBackground" Grid.Row="1" Height="2" Background="{DynamicResource Brush.Border.Secondary}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="5,0"/>
                            
                            <!-- Thumb -->
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Style="{StaticResource BlueTrackRepeatButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Style="{StaticResource TransparentRepeatButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="12" Height="12" Fill="#FFFFFF" Stroke="{DynamicResource Brush.Text.Dark}" StrokeThickness="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Round Filled Slider Style (For Volume - Blue Fill) -->
        <Style x:Key="RoundFilledSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Bright}"/>
            <Setter Property="IsSelectionRangeEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.Resources>
                                <!-- Blue RepeatButton Template for Filled Track -->
                                <Style x:Key="BlueTrackRepeatButtonStyle" TargetType="RepeatButton">
                                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                                    <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="IsTabStop" Value="False"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Grid Background="Transparent">
                                                    <Rectangle Fill="{TemplateBinding Background}" Height="2" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                                <Style x:Key="TransparentRepeatButtonStyle" TargetType="RepeatButton">
                                     <Setter Property="OverridesDefaultStyle" Value="True"/>
                                     <Setter Property="Background" Value="Transparent"/>
                                     <Setter Property="Focusable" Value="False"/>
                                     <Setter Property="IsTabStop" Value="False"/>
                                     <Setter Property="Template">
                                         <Setter.Value>
                                             <ControlTemplate TargetType="RepeatButton">
                                                 <Rectangle Fill="{TemplateBinding Background}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"/>
                                             </ControlTemplate>
                                         </Setter.Value>
                                     </Setter>
                                 </Style>
                            </Grid.Resources>
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="26"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Track Layer -->
                            <Border x:Name="TrackBackground" Grid.Row="1" Height="2" Background="{DynamicResource Brush.Border.Secondary}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="5,0"/>
                            
                            <!-- Thumb -->
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Style="{StaticResource BlueTrackRepeatButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Style="{StaticResource TransparentRepeatButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="12" Height="12" Fill="#FFFFFF" Stroke="{DynamicResource Brush.Text.Dark}" StrokeThickness="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid AllowDrop="True" Background="Transparent">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Drop">
                <i:InvokeCommandAction Command="{Binding DropFileCommand}" PassEventArgsToCommand="True" />
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>   <!-- Console (Left) -->
            <ColumnDefinition Width="350"/>  <!-- Metadata (Right) -->
        </Grid.ColumnDefinitions>

        <!-- LEFT COLUMN: CONSOLE -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- File List -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel VerticalAlignment="Center">
                    <!-- Title Row -->
                    <StackPanel Orientation="Horizontal">
                        <!-- Headphones Icon -->
                        <Path Data="M8,5.14V19.14L19,12.14L8,5.14Z"
                              Fill="{DynamicResource Brush.Accent}"
                              Height="20" Width="20" Stretch="Uniform"
                              VerticalAlignment="Center" Margin="0,0,10,0"/>


                        
                        <TextBlock Text="{Binding ReportTitle}" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>

                    </StackPanel>
                    
                    <!-- FileName and Timecode removed -->
                </StackPanel>
            </Grid>



            



            <!-- FILE LIST CONTENT -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Margin="0,0,0,5">
                    <TextBlock Text="FILE LIST" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Opacity="0.5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="ADD FILE(S)" Command="{Binding AddFilesCommand}" 
                                Style="{StaticResource BlueActionButtonStyle}" 
                                Width="120" Height="26" FontSize="11" 
                                Margin="0,0,10,0"/>
                        <Button Content="CLEAR LIST" Command="{Binding ClearListCommand}" 
                                Style="{StaticResource BlueActionButtonStyle}" 
                                Width="100" Height="26" FontSize="11"/>
                    </StackPanel>
                </Grid>
                
                <!-- Drop Area / List -->
                <Border Grid.Row="1" Background="{StaticResource Brush.Panel.Deep}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="4">
                    <Grid>
                        <!-- VIDEO REPORT DATAGRID -->
                        <DataGrid ItemsSource="{Binding VideoReportItems}" 
                                  AutoGenerateColumns="False" 
                                  CanUserSortColumns="True"
                                  CanUserReorderColumns="False"
                                  Background="Transparent" 
                                  BorderThickness="0" 
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  RowHeaderWidth="0"
                                  Foreground="White"
                                  IsReadOnly="False"
                                  AllowDrop="True"
                                  ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                  RowStyle="{StaticResource DataGridRowStyle}">
                             <DataGrid.Style>
                                <Style TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGrid}}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ReportTitle}" Value="CAMERA REPORT">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Style>

                             <DataGrid.Columns>
                                <!-- CLIP NAME -->
                                <DataGridTemplateColumn Header="CLIP NAME" Width="200" SortMemberPath="ClipName" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ClipName}" FontWeight="Bold" Foreground="White" Margin="6,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- SCENE / TAKE (Reduced) -->
                                <DataGridTemplateColumn Header="SCENE / TAKE" Width="100" IsReadOnly="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="6,0,0,0">
                                                <TextBlock Text="{Binding Scene}" Foreground="#DDD"/>
                                                <TextBlock Text=" / " Foreground="#888" Margin="4,0"/>
                                                <TextBlock Text="{Binding Take}" Foreground="#DDD"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox Text="{Binding Scene, UpdateSourceTrigger=LostFocus}" Width="40" Background="#222" Foreground="White" BorderThickness="0" ToolTip="Scene"/>
                                                <TextBlock Text="/" Foreground="#888" Margin="4,0" VerticalAlignment="Center"/>
                                                <TextBox Text="{Binding Take, UpdateSourceTrigger=LostFocus}" Width="30" Background="#222" Foreground="White" BorderThickness="0" ToolTip="Take"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <!-- TC START -->
                                <DataGridTemplateColumn Header="TC START" Width="100" SortMemberPath="StartTimeCode" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding StartTimeCode}" FontFamily="Consolas" Foreground="#AAA" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- DURATION (Increased) -->
                                <DataGridTemplateColumn Header="DURATION" Width="110" SortMemberPath="Duration" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Duration}" FontFamily="Consolas" Foreground="#888" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- FPS (Increased) -->
                                <DataGridTemplateColumn Header="FPS" Width="70" SortMemberPath="Fps" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Fps}" Foreground="#AAA" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- ISO / WB -->
                                <DataGridTemplateColumn Header="ISO / WB" Width="120" IsReadOnly="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="6,0,0,0">
                                                <TextBlock Text="{Binding Iso}" Foreground="#DDD"/>
                                                <TextBlock Text=" / " Foreground="#888" Margin="4,0"/>
                                                <TextBlock Text="{Binding WhiteBalance}" Foreground="#DDD"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox Text="{Binding Iso, UpdateSourceTrigger=LostFocus}" Width="40" Background="#222" Foreground="White" BorderThickness="0" ToolTip="ISO"/>
                                                <TextBlock Text="/" Foreground="#888" Margin="4,0" VerticalAlignment="Center"/>
                                                <TextBox Text="{Binding WhiteBalance, UpdateSourceTrigger=LostFocus}" Width="40" Background="#222" Foreground="White" BorderThickness="0" ToolTip="WB"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <!-- CODEC / RES (Reduced) -->
                                <DataGridTemplateColumn Header="CODEC / RES" Width="130" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="6,0,0,0">
                                                <TextBlock Text="{Binding Codec}" Foreground="#DDD" FontSize="11"/>
                                                <TextBlock Text="{Binding Resolution}" Foreground="#888" FontSize="10"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- NOTES (Editable) -->
                                <DataGridTemplateColumn Header="NOTES" Width="*" SortMemberPath="ItemNotes">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ItemNotes}" Foreground="#EEE" Margin="6,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding ItemNotes, UpdateSourceTrigger=LostFocus}" Background="#222" Foreground="White" BorderThickness="0" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="40"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- X Button -->
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="X" 
                                                    IsEnabled="False"
                                                    Background="Transparent" BorderThickness="0" Foreground="Red" FontWeight="Bold"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- AUDIO REPORT DATAGRID -->
                        <DataGrid ItemsSource="{Binding AudioReportItems}" 
                                  AutoGenerateColumns="False" 
                                  CanUserSortColumns="True"
                                  CanUserReorderColumns="False"
                                  Background="Transparent" 
                                  BorderThickness="0" 
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  RowHeaderWidth="0"
                                  Foreground="White"
                                  IsReadOnly="False"
                                  AllowDrop="True"
                                  ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                  RowStyle="{StaticResource DataGridRowStyle}">
                             <DataGrid.Style>
                                <Style TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGrid}}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ReportTitle}" Value="SOUND REPORT">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Style>

                             <DataGrid.Columns>
                                <!-- FILENAME -->
                                <DataGridTemplateColumn Header="FILENAME" Width="220" SortMemberPath="Filename" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Filename}" FontWeight="Bold" Foreground="White" Margin="6,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- SCENE -->
                                <DataGridTemplateColumn Header="SCENE" Width="70" SortMemberPath="Scene">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Scene}" Foreground="#DDD" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Scene, UpdateSourceTrigger=LostFocus}" Background="#222" Foreground="White" BorderThickness="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <!-- TAKE -->
                                <DataGridTemplateColumn Header="TAKE" Width="50" SortMemberPath="Take">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Take}" Foreground="#DDD" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Take, UpdateSourceTrigger=LostFocus}" Background="#222" Foreground="White" BorderThickness="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <!-- START TC -->
                                <DataGridTemplateColumn Header="START TC" Width="100" SortMemberPath="StartTimeCode" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding StartTimeCode}" FontFamily="Consolas" Foreground="#AAA" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- DURATION (Increased) -->
                                <DataGridTemplateColumn Header="DURATION" Width="80" SortMemberPath="Duration" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Duration}" FontFamily="Consolas" Foreground="#888" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- SAMPLE RATE -->
                                <DataGridTemplateColumn Header="SR" Width="60" SortMemberPath="SampleRate" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding SampleRate}" Foreground="#AAA" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- BIT DEPTH -->
                                <DataGridTemplateColumn Header="BIT" Width="40" SortMemberPath="BitDepth" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding BitDepth}" Foreground="#AAA" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- TRACKS -->
                                <DataGridTemplateColumn Header="TRACKS" Width="160" SortMemberPath="Tracks">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Tracks}" Foreground="#AAA" Margin="6,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Tracks}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Tracks, UpdateSourceTrigger=LostFocus}" Background="#222" Foreground="White" BorderThickness="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <!-- CIRCLE -->
                                <DataGridTemplateColumn Header="CIRCLE" Width="60" SortMemberPath="IsCircled">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsCircled, UpdateSourceTrigger=PropertyChanged}" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- NOTES (Editable) -->
                                <DataGridTemplateColumn Header="NOTES" Width="*" SortMemberPath="ItemNotes">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ItemNotes}" Foreground="#EEE" Margin="6,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                     <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding ItemNotes, UpdateSourceTrigger=LostFocus}" Background="#222" Foreground="White" BorderThickness="0" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="40"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- X Button -->
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="X" 
                                                    IsEnabled="False"
                                                    Background="Transparent" BorderThickness="0" Foreground="Red" FontWeight="Bold"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- Empty State Hint -->
                        <TextBlock Text="Drop Media Files Here" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                                   Foreground="#555" FontSize="18" FontWeight="Bold"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ReportItems.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Border Grid.Column="1" Padding="10" VerticalAlignment="Stretch" Background="{StaticResource Brush.Panel}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1,0,0,0" CornerRadius="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Video Report Form -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,-5,0,0">
                    <Grid>
                        <!-- VIDEO FORM -->
                        <StackPanel Margin="5" KeyboardNavigation.TabNavigation="Cycle">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ReportTitle}" Value="CAMERA REPORT">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Secondary}"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Margin" Value="0,10,0,2"/>
                                </Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </StackPanel.Resources>


                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="DATE"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Manual Text Field -->
                                        <TextBox Grid.Column="0" Text="{Binding Header.ReportDate, UpdateSourceTrigger=PropertyChanged}"/>
                                        
                                        <!-- Calendar Trigger -->
                                        <ToggleButton x:Name="DateToggle" Grid.Column="1" Width="26" Height="26" Margin="2,0,0,0"
                                                      IsChecked="{Binding IsVideoCalendarOpen}" Focusable="False">
                                            <ToggleButton.Style>
                                                <Style TargetType="ToggleButton">
                                                    <Setter Property="Background" Value="{StaticResource Brush.Control}"/>
                                                    <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <!-- Hover Effect (Gray) -->
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#666666"/>
                                                            <Setter Property="BorderBrush" Value="#666666"/>
                                                        </Trigger>
                                                        <!-- Video Mode (Blue) -->
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsChecked, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                                <Condition Binding="{Binding ReportTitle}" Value="CAMERA REPORT"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Background" Value="#1A4CB1"/>
                                                            <Setter Property="BorderBrush" Value="#1A4CB1"/>
                                                        </MultiDataTrigger>
                                                        <!-- Audio Mode (Red) -->
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsChecked, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                                <Condition Binding="{Binding ReportTitle}" Value="SOUND REPORT"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Background" Value="#D32F2F"/>
                                                            <Setter Property="BorderBrush" Value="#D32F2F"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ToggleButton.Style>
                                            <Path Data="M7,10H12V15H7M19,19H5V8H19M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.9 20.1,3 19,3Z" 
                                                  Stretch="Uniform" Fill="White" Width="12" Height="12"/>
                                        </ToggleButton>
                                        
                                        <!-- Date Popup -->
                                        <Popup IsOpen="{Binding IsChecked, ElementName=DateToggle}" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=DateToggle}">
                                            <Border Background="{StaticResource Brush.Panel}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                                                <Calendar SelectedDate="{Binding Header.CalendarDate}" Style="{StaticResource ProCalendarStyle}"/>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </StackPanel>
                                
                                <!-- Right Column Empty as requested -->
                                <StackPanel Grid.Column="2"/> 
                            </Grid>

                            <TextBlock Text="PROJECT NAME"/>
                            <TextBox Text="{Binding Header.ProjectName, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="DIRECTOR"/>
                            <TextBox Text="{Binding Header.Director, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="DIR. OF PHOT."/>
                            <TextBox Text="{Binding Header.Dop, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="OPERATOR"/>
                            <TextBox Text="{Binding Header.OperatorName, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="DATA MANAGER"/>
                            <TextBox Text="{Binding Header.DataManager, UpdateSourceTrigger=PropertyChanged}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="CAMERA ID"/>
                                    <TextBox Text="{Binding Header.CameraId, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="REEL NAME"/>
                                    <TextBox Text="{Binding Header.ReelName, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </Grid>


                            <TextBlock Text="LENS INFO"/>
                            <TextBox Text="{Binding Header.LensInfo, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- CLEAR BUTTON -->
                            <Button Content="CLEAR INFOS" Command="{Binding ClearInfosCommand}" Margin="0,20,0,0" Style="{StaticResource ClearInfoButtonStyle}"/>

                        </StackPanel>

                        <!-- AUDIO FORM (Duplicate) -->
                        <StackPanel Margin="5" KeyboardNavigation.TabNavigation="Cycle">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ReportTitle}" Value="SOUND REPORT">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Secondary}"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Margin" Value="0,10,0,2"/>
                                </Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </StackPanel.Resources>


                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="DATE"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Manual Text Field -->
                                        <TextBox Grid.Column="0" Text="{Binding Header.ReportDate, UpdateSourceTrigger=PropertyChanged}"/>
                                        
                                        <!-- Calendar Trigger (Renamed for Audio) -->
                                        <ToggleButton x:Name="DateToggleAudio" Grid.Column="1" Width="26" Height="26" Margin="2,0,0,0"
                                                      IsChecked="{Binding IsAudioCalendarOpen}" Focusable="False">
                                            <ToggleButton.Style>
                                                <Style TargetType="ToggleButton">
                                                    <Setter Property="Background" Value="{StaticResource Brush.Control}"/>
                                                    <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <!-- Hover Effect (Gray) -->
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#666666"/>
                                                            <Setter Property="BorderBrush" Value="#666666"/>
                                                        </Trigger>
                                                        <!-- Video Mode (Blue) -->
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsChecked, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                                <Condition Binding="{Binding ReportTitle}" Value="CAMERA REPORT"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Background" Value="#1A4CB1"/>
                                                            <Setter Property="BorderBrush" Value="#1A4CB1"/>
                                                        </MultiDataTrigger>
                                                        <!-- Audio Mode (Red) -->
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsChecked, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                                <Condition Binding="{Binding ReportTitle}" Value="SOUND REPORT"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Background" Value="#D32F2F"/>
                                                            <Setter Property="BorderBrush" Value="#D32F2F"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ToggleButton.Style>
                                            <Path Data="M7,10H12V15H7M19,19H5V8H19M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.9 20.1,3 19,3Z" 
                                                  Stretch="Uniform" Fill="White" Width="12" Height="12"/>
                                        </ToggleButton>
                                        
                                        <!-- Date Popup -->
                                        <Popup IsOpen="{Binding IsChecked, ElementName=DateToggleAudio}" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=DateToggleAudio}">
                                            <Border Background="{StaticResource Brush.Panel}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                                                <Calendar SelectedDate="{Binding Header.CalendarDate}" Style="{StaticResource ProCalendarStyleAudio}"/>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </StackPanel>
                                
                                <!-- Right Column Empty as requested -->
                                <StackPanel Grid.Column="2"/> 
                            </Grid>

                            <!-- PROJECT NAME -->
                            <TextBlock Text="PROJECT NAME"/>
                            <TextBox Text="{Binding Header.ProjectName, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- SOUND MIXER -->
                            <TextBlock Text="SOUND MIXER"/>
                            <TextBox Text="{Binding Header.SoundMixer, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- BOOM OP. -->
                            <TextBlock Text="BOOM OP."/>
                            <TextBox Text="{Binding Header.BoomOperator, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- LOCATION -->
                            <TextBlock Text="LOCATION"/>
                            <TextBox Text="{Binding Header.Location, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- TECHNICAL INFO ROW 1 -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="TIMECODE RATE"/>
                                    <TextBox Text="{Binding Header.TimecodeRate, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="FILES TYPE"/>
                                    <TextBox Text="{Binding Header.FilesType, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </Grid>

                            <!-- CLEAR BUTTON -->
                            <Button Content="CLEAR INFOS" Command="{Binding ClearInfosCommand}" Margin="0,20,0,0" Style="{StaticResource ClearInfoButtonStyle}"/>

                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <!-- EXPORT BUTTON -->
                <Button Grid.Row="1" Content="EXPORT TO PDF" Command="{Binding ExportPdfCommand}" 
                        Style="{StaticResource BlueActionButtonStyle}" Height="30" Margin="0,10,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
