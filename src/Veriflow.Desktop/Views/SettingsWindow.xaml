<Window x:Class="Veriflow.Desktop.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings - Veriflow" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.Background}"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="SETTINGS" 
                   FontSize="{StaticResource Font.Size.Header}" 
                   FontWeight="Bold" 
                   Foreground="{DynamicResource Brush.Accent}"
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- General Section -->
                <Border Background="{DynamicResource Brush.Panel}" 
                        BorderBrush="{DynamicResource Brush.Border}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="GENERAL" 
                                   FontWeight="SemiBold" 
                                   FontSize="{StaticResource Font.Size.Body}" 
                                   Foreground="{DynamicResource Brush.Accent}"
                                   Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Enable auto-save (every 5 minutes)" 
                                  IsChecked="False" 
                                  Margin="0,5"/>
                        
                        <CheckBox Content="Show confirmation dialogs" 
                                  IsChecked="True" 
                                  Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Session Section -->
                <Border Background="{DynamicResource Brush.Panel}" 
                        BorderBrush="{DynamicResource Brush.Border}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="SESSIONS" 
                                   FontWeight="SemiBold" 
                                   FontSize="{StaticResource Font.Size.Body}" 
                                   Foreground="{DynamicResource Brush.Accent}"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Default session folder:" 
                                   Opacity="0.7" 
                                   Margin="0,5,0,5"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     Text="C:\Users\Documents\Veriflow\Sessions" 
                                     IsReadOnly="True"
                                     Margin="0,0,10,0"/>
                            
                            <Button Grid.Column="1" 
                                    Content="Browse..." 
                                    Padding="10,5"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="OK" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Click="OkButton_Click"
                    Background="{DynamicResource Brush.Accent}"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Cancel" 
                    Width="100" 
                    Height="35"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
