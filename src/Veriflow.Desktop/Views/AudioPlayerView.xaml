<UserControl x:Class="Veriflow.Desktop.Views.AudioPlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
             xmlns:conv="clr-namespace:Veriflow.Desktop.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1024"
             Focusable="True"
             FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}">
    <UserControl.InputBindings>
        <KeyBinding Key="Space" Command="{Binding TogglePlayPauseCommand}"/>
        <KeyBinding Key="Return" Command="{Binding StopCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <conv:PercentToPositionConverter x:Key="PercentToPositionConverter"/>

        <!-- Mute Button Style -->
        <Style x:Key="DawMuteButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{DynamicResource Brush.Control}" CornerRadius="2" BorderBrush="{DynamicResource Brush.Text.Dark}" BorderThickness="1">
                            <TextBlock Text="M" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{StaticResource Font.Size.Mini}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource Brush.State.Mute}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Solo Button Style -->
        <Style x:Key="DawSoloButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{DynamicResource Brush.Control}" CornerRadius="2" BorderBrush="{DynamicResource Brush.Text.Dark}" BorderThickness="1">
                            <TextBlock x:Name="txt" Text="S" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{StaticResource Font.Size.Mini}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource Brush.State.Solo}"/>
                                <Setter TargetName="txt" Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Modern Transport Button Base Style -->
        <!-- Transport Styles Moved to Shared -->

        <!-- Round Slider Style -->
        <Style x:Key="RoundSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Bright}"/>
            <Setter Property="IsSelectionRangeEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.Resources>
                                <!-- Transparent RepeatButton Template to prevent hover effects -->
                                <Style x:Key="TransparentRepeatButtonStyle" TargetType="RepeatButton">
                                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="IsTabStop" Value="False"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Rectangle Fill="{TemplateBinding Background}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>

                                <!-- Blue RepeatButton Template for Filled Track -->
                                <Style x:Key="BlueTrackRepeatButtonStyle" TargetType="RepeatButton">
                                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                                    <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="IsTabStop" Value="False"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Rectangle Fill="{TemplateBinding Background}" Height="2" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Grid.Resources>
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="26"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Track Layer -->
                            <Border x:Name="TrackBackground" Grid.Row="1" Height="2" Background="{DynamicResource Brush.Border.Secondary}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="5,0"/>
                            
                            <!-- Thumb -->
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Style="{StaticResource TransparentRepeatButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Style="{StaticResource TransparentRepeatButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="12" Height="12" Fill="#FFFFFF" Stroke="{DynamicResource Brush.Text.Dark}" StrokeThickness="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Round Filled Slider Style (For Volume - Blue Fill) -->
        <Style x:Key="RoundFilledSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Bright}"/>
            <Setter Property="IsSelectionRangeEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.Resources>
                                <!-- Blue RepeatButton Template for Filled Track -->
                                <Style x:Key="BlueTrackRepeatButtonStyle" TargetType="RepeatButton">
                                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                                    <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="IsTabStop" Value="False"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Rectangle Fill="{TemplateBinding Background}" Height="2" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                                <Style x:Key="TransparentRepeatButtonStyle" TargetType="RepeatButton">
                                     <Setter Property="OverridesDefaultStyle" Value="True"/>
                                     <Setter Property="Background" Value="Transparent"/>
                                     <Setter Property="Focusable" Value="False"/>
                                     <Setter Property="IsTabStop" Value="False"/>
                                     <Setter Property="Template">
                                         <Setter.Value>
                                             <ControlTemplate TargetType="RepeatButton">
                                                 <Rectangle Fill="{TemplateBinding Background}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"/>
                                             </ControlTemplate>
                                         </Setter.Value>
                                     </Setter>
                                 </Style>
                            </Grid.Resources>
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="26"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Track Layer -->
                            <Border x:Name="TrackBackground" Grid.Row="1" Height="2" Background="{DynamicResource Brush.Border.Secondary}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="5,0"/>
                            
                            <!-- Thumb -->
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Style="{StaticResource BlueTrackRepeatButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Style="{StaticResource TransparentRepeatButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="12" Height="12" Fill="#FFFFFF" Stroke="{DynamicResource Brush.Text.Dark}" StrokeThickness="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid AllowDrop="True" Background="Transparent">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Drop">
                <i:InvokeCommandAction Command="{Binding DropFileCommand}" PassEventArgsToCommand="True" />
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <!-- CONSOLE ONLY -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Transport (Reserved/Hidden here) -->
                <RowDefinition Height="30"/>   <!-- Ruler Header -->
                <RowDefinition Height="*"/>    <!-- Tracks -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <StackPanel VerticalAlignment="Center">
                    <!-- Title Row -->
                    <StackPanel Orientation="Horizontal">
                        <!-- Headphones Icon -->
                        <Path Data="M8,5.14V19.14L19,12.14L8,5.14Z"
                              Fill="{DynamicResource Brush.Accent}"
                              Height="20" Width="20" Stretch="Uniform"
                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                              
                        <TextBlock Text="PLAYER AUDIO" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>

                    </StackPanel>

                    <TextBlock Text="{Binding FileName, TargetNullValue='No file loaded'}" FontSize="{StaticResource Font.Size.Header}" FontWeight="Bold" Foreground="{DynamicResource Brush.Text.Bright}" Margin="0,2"/>
                    
                    <!-- Timecode Display -->
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="{Binding CurrentTimeDisplay}" FontSize="{StaticResource Font.Size.Large}" FontFamily="Consolas" Foreground="{DynamicResource Brush.Accent}"/>
                            <TextBlock Text=" / " FontSize="{StaticResource Font.Size.Large}" Opacity="0.5"/>
                            <TextBlock Text="{Binding TotalTimeDisplay}" FontSize="{StaticResource Font.Size.Large}" FontFamily="Consolas" Opacity="0.5"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Ruler (Aligned to Waveform Column) -->
            <Grid Grid.Row="2" Background="Transparent" Margin="0,0,0,5"
                  Visibility="{Binding IsAudioLoaded, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/> <!-- Console Controls Width -->
                    <ColumnDefinition Width="30"/>  <!-- Meter Width -->
                    <ColumnDefinition Width="*"/>   <!-- Audio/Ruler Column -->
                </Grid.ColumnDefinitions>

                <!-- Ruler in Col 2 -->
                <Border Grid.Column="2" ClipToBounds="True" Margin="0" Background="Transparent" Cursor="Hand">
                     <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding SeekCommand}" PassEventArgsToCommand="True"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    
                    <Canvas x:Name="RulerCanvas" Background="Transparent">
                        <ItemsControl ItemsSource="{Binding RulerTicks}" Focusable="False">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas IsItemsHost="True"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left">
                                        <Setter.Value>
                                            <MultiBinding Converter="{StaticResource PercentToPositionConverter}">
                                                <Binding Path="Percent"/>
                                                <Binding ElementName="RulerCanvas" Path="ActualWidth"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!-- Tick Mark -->
                                        <Rectangle Width="1" Height="10" Fill="White" Opacity="0.3" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                                        <!-- Time Label -->
                                        <TextBlock Text="{Binding Label}" FontSize="{StaticResource Font.Size.Micro}" Opacity="0.7" Margin="2,10,0,0" Foreground="White" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </Border>
            </Grid>

            <!-- Tracks List (Reaper Console Layout) -->
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Background="Transparent" Focusable="False"
                          Visibility="{Binding IsAudioLoaded, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid VerticalAlignment="Top">
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260"/> <!-- Controls -->
                        <ColumnDefinition Width="30"/>  <!-- Meter -->
                        <ColumnDefinition Width="*"/>   <!-- Audio -->
                    </Grid.ColumnDefinitions>

                    <!-- Tracks ItemsControl (Spans all 3 cols to sync row heights) -->
                    <ItemsControl Grid.ColumnSpan="3" ItemsSource="{Binding Tracks}" Background="Transparent" BorderThickness="0" Focusable="False"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:TrackViewModel}">
                                <Border Background="{DynamicResource Brush.Panel.Light}" Margin="0,0,0,1" BorderBrush="{DynamicResource Brush.Text.Dark}" BorderThickness="0,0,0,2">
                                    <Grid Height="70"> <!-- Reduced height for density -->
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="260"/>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Col 0: Console Controls (Name, Faders, Buttons) -->
                                        <Grid Grid.Column="0" Margin="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/> <!-- Name -->
                                                <RowDefinition Height="*"/>    <!-- Faders + Buttons -->
                                            </Grid.RowDefinitions>

                                            <!-- Name -->
                                            <TextBlock Text="{Binding TrackName}" FontWeight="Bold" Foreground="{DynamicResource Brush.Text.Bright}" FontSize="{StaticResource Font.Size.Small}" Margin="5,0,0,2" TextTrimming="CharacterEllipsis"/>

                                            <!-- Controls Area -->
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/> <!-- Buttons -->
                                                    <ColumnDefinition Width="*"/>    <!-- Faders -->
                                                </Grid.ColumnDefinitions>

                                                <!-- Buttons -->
                                                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0">
                                                    <ToggleButton IsChecked="{Binding IsMuted}" Style="{StaticResource DawMuteButtonStyle}" ToolTip="Mute" Focusable="False"/>
                                                    <ToggleButton IsChecked="{Binding IsSoloed}" Style="{StaticResource DawSoloButtonStyle}" ToolTip="Solo" Focusable="False"/>
                                                </StackPanel>

                                                <!-- Faders -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <!-- Volume -->
                                                    <Grid Margin="0,0,0,2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="20"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="VOL" FontSize="{StaticResource Font.Size.Micro}" Opacity="0.6" VerticalAlignment="Center"/>
                                                        <Slider Grid.Column="1" Value="{Binding Volume}" Maximum="1" Minimum="0" 
                                                                LargeChange="0.1" SmallChange="0.01" 
                                                                Focusable="False" ToolTip="Volume" Style="{StaticResource RoundFilledSliderStyle}"
                                                                PreviewMouseLeftButtonDown="Slider_PreviewMouseLeftButtonDown"
                                                                PreviewMouseMove="Slider_PreviewMouseMove"
                                                                PreviewMouseLeftButtonUp="Slider_PreviewMouseLeftButtonUp">
                                                            <i:Interaction.Triggers>
                                                                <i:EventTrigger EventName="MouseDoubleClick">
                                                                    <i:InvokeCommandAction Command="{Binding ResetVolumeCommand}"/>
                                                                </i:EventTrigger>
                                                            </i:Interaction.Triggers>
                                                        </Slider>
                                                    </Grid>
                                                    
                                                    <!-- Pan -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="20"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="PAN" FontSize="{StaticResource Font.Size.Micro}" Opacity="0.6" VerticalAlignment="Center"/>
                                                        <Slider Grid.Column="1" Value="{Binding Pan}" Maximum="1" Minimum="-1" 
                                                                LargeChange="0.1" SmallChange="0.01" 
                                                                Focusable="False" ToolTip="Pan" Style="{StaticResource RoundSliderStyle}"
                                                                PreviewMouseLeftButtonDown="Slider_PreviewMouseLeftButtonDown"
                                                                PreviewMouseMove="Slider_PreviewMouseMove"
                                                                PreviewMouseLeftButtonUp="Slider_PreviewMouseLeftButtonUp">
                                                            <i:Interaction.Triggers>
                                                                <i:EventTrigger EventName="MouseDoubleClick">
                                                                    <i:InvokeCommandAction Command="{Binding ResetPanCommand}"/>
                                                                </i:EventTrigger>
                                                            </i:Interaction.Triggers>
                                                        </Slider>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>

                                        <!-- Col 1: VU Meter (REDESIGNED) -->
                                        <Border Grid.Column="1" Background="{DynamicResource Brush.Text.Dark}" Width="10" Margin="0,5" VerticalAlignment="Stretch">
                                           <Rectangle Fill="{DynamicResource Brush.Meter.fill}" VerticalAlignment="Stretch">
                                               <Rectangle.RenderTransform>
                                                    <ScaleTransform ScaleY="{Binding CurrentLevel}"/>
                                               </Rectangle.RenderTransform>
                                               <Rectangle.RenderTransformOrigin>
                                                   <Point X="0.5" Y="1"/>
                                               </Rectangle.RenderTransformOrigin>
                                           </Rectangle>
                                        </Border>

                                        <!-- Col 2: Audio Waveform -->
                                        <Border Grid.Column="2" Background="Transparent" ClipToBounds="True" Margin="0,2">
                                            <Viewbox Stretch="Fill">
                                                <Polygon Points="{Binding WaveformPoints}" Fill="White" />
                                            </Viewbox>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                
                    <!-- Overlay Canvas (Global Playhead) -->
                    <Grid Grid.Column="2" IsHitTestVisible="True" Background="Transparent">
                        <Canvas Background="Transparent" x:Name="WaveformOverlay">
                             <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding SeekCommand}" PassEventArgsToCommand="True"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        
                            <Line Y1="0" Y2="{Binding ActualHeight, ElementName=WaveformOverlay}" 
                                  Stroke="#FFFFFF" StrokeThickness="1" Opacity="1">
                                <Line.X1>
                                    <MultiBinding Converter="{StaticResource PercentToPositionConverter}">
                                        <Binding Path="PlaybackPercent" />
                                        <Binding ElementName="WaveformOverlay" Path="ActualWidth"/>
                                    </MultiBinding>
                                </Line.X1>
                                <Line.X2>
                                    <MultiBinding Converter="{StaticResource PercentToPositionConverter}">
                                        <Binding Path="PlaybackPercent" />
                                        <Binding ElementName="WaveformOverlay" Path="ActualWidth"/>
                                    </MultiBinding>
                                </Line.X2>
                            </Line>
                        </Canvas>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
