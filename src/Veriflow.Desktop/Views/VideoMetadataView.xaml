<UserControl x:Class="Veriflow.Desktop.Views.VideoMetadataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="350">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Border Padding="10" VerticalAlignment="Stretch" Background="{StaticResource Brush.Panel}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1,0,0,0" CornerRadius="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Buttons -->
                <RowDefinition Height="*"/>    <!-- Layout -->
                <RowDefinition Height="Auto"/> <!-- Bottom Actions -->
            </Grid.RowDefinitions>

            <!-- Action Buttons Area -->
            <StackPanel Grid.Row="0" Margin="0,0,0,41">
                <Button Command="{Binding OpenFileCommand}"
                        Content="OPEN FILE" Height="26" ToolTip="Import Video File" Margin="0,0,0,5"
                        Style="{StaticResource ContextualActionButtonStyle}" Focusable="False"/>
                
                <Button Command="{Binding UnloadMediaCommand}"
                        Content="CLOSE FILE" Height="26" ToolTip="Unload current media" Margin="0,0,0,20"
                        Style="{StaticResource ContextualActionButtonStyle}" Focusable="False"/>

                <Button Command="{Binding SendFileToTranscodeCommand}"
                        Content="SEND TO TRANSCODE" Height="26" ToolTip="Send current file to Transcode Page"
                        Style="{StaticResource ContextualActionButtonStyle}" Focusable="False"/>
            </StackPanel>

            <!-- VIDEO METADATA SCROLLVIEWER -->
            <ScrollViewer Grid.Row="1" Focusable="False" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ScrollViewer.Resources>
                        <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ModernScrollBarStyle}"/>
                </ScrollViewer.Resources>
                <StackPanel>
                    <!-- 1. FILE INFO -->
                    <Expander Header="FILE INFO" IsExpanded="False" Style="{StaticResource ProExpanderStyle}" Focusable="False">
                        <Grid Margin="5,0,5,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Name:" Foreground="{DynamicResource Brush.Text.Secondary}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentVideoMetadata.Filename}" TextTrimming="CharacterEllipsis" Foreground="White"/>
                            
                            <TextBlock Grid.Row="1" Text="Container:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Container}" Foreground="White" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="2" Text="Size:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Size}" Foreground="White" Margin="0,2,0,0"/>
                            
                            <TextBlock Grid.Row="3" Text="Duration:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Duration}" FontFamily="Consolas" Foreground="White" Margin="0,2,0,0"/>
                        </Grid>
                    </Expander>

                    <!-- 2. VIDEO STREAM -->
                    <Expander Header="VIDEO STREAM" IsExpanded="False" Style="{StaticResource ProExpanderStyle}" Focusable="False">
                        <Grid Margin="5,0,5,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Codec:" Foreground="{DynamicResource Brush.Text.Secondary}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentVideoMetadata.Codec}" TextWrapping="Wrap" Foreground="White"/>

                            <TextBlock Grid.Row="1" Text="Resolution:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Resolution}" Foreground="White" FontWeight="Bold" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="2" Text="Aspect Ratio:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentVideoMetadata.AspectRatio}" Foreground="White" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="3" Text="Frame Rate:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentVideoMetadata.FrameRate}" Foreground="White" FontWeight="Bold" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="4" Text="Bit Depth:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentVideoMetadata.BitDepth}" Foreground="White" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="5" Text="Chroma:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CurrentVideoMetadata.ChromaSubsampling}" Foreground="White" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="6" Text="Color Space:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding CurrentVideoMetadata.ColorSpace}" Foreground="White" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="7" Text="Scan Type:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding CurrentVideoMetadata.ScanType}" Foreground="White" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="8" Text="GOP Struct:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding CurrentVideoMetadata.GopStructure}" Foreground="White" Margin="0,2,0,0"/>
                            
                            <TextBlock Grid.Row="9" Text="Bitrate:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Bitrate}" Foreground="White" Margin="0,2,0,0"/>
                        </Grid>
                    </Expander>

                    <!-- 3. AUDIO & TIMECODE -->
                    <Expander Header="AUDIO &amp; TIMECODE" IsExpanded="False" Style="{StaticResource ProExpanderStyle}" Focusable="False">
                        <Grid Margin="5,0,5,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Audio Format:" Foreground="{DynamicResource Brush.Text.Secondary}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentVideoMetadata.AudioFormat}" Foreground="White"/>

                            <TextBlock Grid.Row="1" Text="Channels:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentVideoMetadata.AudioChannels}" Foreground="White" Margin="0,2,0,0"/>
                            
                            <TextBlock Grid.Row="2" Text="Start TC:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentVideoMetadata.StartTimecode}" FontFamily="Consolas" Foreground="White" FontWeight="Bold" Margin="0,2,0,0"/>
                        </Grid>
                    </Expander>
                    <!-- 4. LOGGED CLIPS -->
                    <Expander Header="LOGGED CLIPS" IsExpanded="True" Style="{StaticResource ProExpanderStyle}" Focusable="False">
                        <Grid Margin="0,0,0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- PENDING CLIP DISPLAY -->
                            <Border Grid.Row="0" Margin="0,0,0,10" Background="#222" BorderBrush="#444" BorderThickness="1" Padding="5" CornerRadius="3"
                                    Visibility="{Binding IsLoggingPending, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="CURRENT CLIP" Foreground="{DynamicResource Brush.Accent}" FontWeight="Bold" FontSize="10" Margin="0,0,0,5"/>
                                    <Grid Margin="0,0,0,2">
                                        <TextBlock Text="IN:" Foreground="#888" FontSize="11"/>
                                        <TextBlock Text="{Binding CurrentMarkInDisplay}" Foreground="White" FontFamily="Consolas" HorizontalAlignment="Right" FontSize="11"/>
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="OUT:" Foreground="#888" FontSize="11"/>
                                        <TextBlock Text="{Binding CurrentMarkOutDisplay}" Foreground="White" FontFamily="Consolas" HorizontalAlignment="Right" FontSize="11"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <ListBox Grid.Row="1" ItemsSource="{Binding TaggedClips}" BorderThickness="0" Background="Transparent" MaxHeight="200">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#333" BorderThickness="0,0,0,1" Padding="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Rectangle Width="4" Fill="{Binding TagColor}" Margin="0,0,5,0"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Notes}" Foreground="White" FontWeight="Bold"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding InPoint}" Foreground="#888" FontSize="10"/>
                                                        <TextBlock Text=" - " Foreground="#888" FontSize="10"/>
                                                        <TextBlock Text="{Binding OutPoint}" Foreground="#888" FontSize="10"/>
                                                        <TextBlock Text=" (" Foreground="#888" FontSize="10"/>
                                                        <TextBlock Text="{Binding Duration}" Foreground="#888" FontSize="10"/>
                                                        <TextBlock Text=")" Foreground="#888" FontSize="10"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Expander>
                </StackPanel>
            </ScrollViewer>


            <!-- BOTTOM ACTIONS -->
            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <Button Command="{Binding UpdateReportCommand}"
                        Content="UPDATE REPORT NOTES" Height="26" ToolTip="Update Report Note" Margin="0,0,0,5"
                        Style="{StaticResource ContextualActionButtonStyle}" Focusable="False"/>
                
                <Button Command="{Binding ExportLogsCommand}"
                        Content="EXPORT LOGS (EDL/ALE)" Height="26" ToolTip="Export Tagged Clips"
                        Style="{StaticResource ContextualActionButtonStyle}" Background="#2E7D32" BorderBrush="#2E7D32" Focusable="False"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
