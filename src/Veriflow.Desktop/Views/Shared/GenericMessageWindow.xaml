<Window x:Class="Veriflow.Desktop.Views.Shared.GenericMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Veriflow"
        Width="450"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource Brush.Panel}"
        Foreground="{StaticResource Brush.Text}"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Message -->
            <RowDefinition Height="Auto"/> <!-- Button -->
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="MessageText" Grid.Row="0" 
                   Text="Message goes here..."
                   TextWrapping="Wrap" 
                   Margin="0,0,0,25"
                   FontSize="{StaticResource Font.Size.Body}" 
                   Foreground="{StaticResource Brush.Text.Bright}"
                   HorizontalAlignment="Left"/>
        
        <Button x:Name="OkButton" Grid.Row="1" 
                Content="OK" 
                IsDefault="True" 
                Click="OkButton_Click" 
                HorizontalAlignment="Right"
                Style="{StaticResource Style.Button.Primary}" 
                Width="90" Height="28"/>
    </Grid>
</Window>
