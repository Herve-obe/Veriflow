<Window x:Class="Veriflow.Desktop.Views.Dialogs.UCSEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
        Title="Edit UCS Category" 
        Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- ComboBox Style -->
        <Style x:Key="UCSComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <!-- TextBlock Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1177BB"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0D5A8F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Background" Value="#3E3E42"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4E4E52"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="UNIVERSAL CATEGORY SYSTEM (UCS)" 
                   FontSize="14" 
                   FontWeight="Bold" 
                   Foreground="{DynamicResource Brush.Accent}"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <!-- Main Category -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="CATEGORY" Style="{StaticResource LabelStyle}"/>
                <ComboBox ItemsSource="{Binding MainCategories}"
                          SelectedItem="{Binding SelectedMainCategory}"
                          Style="{StaticResource UCSComboBoxStyle}"
                          IsEditable="True"
                          IsTextSearchEnabled="True"/>
            </StackPanel>

            <!-- SubCategory -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="SUBCATEGORY" Style="{StaticResource LabelStyle}"/>
                <ComboBox ItemsSource="{Binding SubCategories}"
                          SelectedItem="{Binding SelectedSubCategory}"
                          DisplayMemberPath="SubCategory"
                          Style="{StaticResource UCSComboBoxStyle}"
                          IsEnabled="{Binding SelectedMainCategory, Converter={StaticResource NullToBoolConverter}}"/>
            </StackPanel>

            <!-- CatID (Read-only) -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="CATEGORY ID (CatID)" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding CatID, Mode=OneWay}"
                         IsReadOnly="True"
                         Background="#252526"
                         Foreground="#888"
                         BorderBrush="#3F3F46"
                         BorderThickness="1"
                         Padding="8,6"
                         FontFamily="Consolas"
                         FontSize="12"
                         Height="32"/>
            </StackPanel>

            <!-- Full Path (Read-only) -->
            <StackPanel>
                <TextBlock Text="FULL PATH" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding FullPath, Mode=OneWay}"
                         IsReadOnly="True"
                         Background="#252526"
                         Foreground="#888"
                         BorderBrush="#3F3F46"
                         BorderThickness="1"
                         Padding="8,6"
                         FontSize="11"
                         Height="32"/>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="CLEAR" 
                    Command="{Binding ClearCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="CANCEL" 
                    Click="Cancel_Click"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="OK" 
                    Click="Ok_Click"
                    Style="{StaticResource DialogButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
