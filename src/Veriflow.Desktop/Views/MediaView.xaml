<UserControl x:Class="Veriflow.Desktop.Views.MediaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1024">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>

        <!-- Folder Tree Item Style -->
        <HierarchicalDataTemplate x:Key="FolderTemplate" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <Path Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z" 
                      Fill="#FFC107" Height="14" Width="14" Stretch="Uniform" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding Name}" Foreground="#DDDDDD" FontSize="13" Margin="5,0,0,0"/>
            </StackPanel>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate x:Key="DriveTemplate" ItemsSource="{Binding Folders}" ItemTemplate="{StaticResource FolderTemplate}">
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <Path Data="M6,2H18A2,2 0 0,1 20,4V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V4A2,2 0 0,1 6,2Z" 
                      Fill="#90A4AE" Height="14" Width="14" Stretch="Uniform" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" Margin="5,0,0,0"/>
            </StackPanel>
        </HierarchicalDataTemplate>

    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/> <!-- Explorer -->
            <ColumnDefinition Width="*"/>   <!-- Browser -->
            <ColumnDefinition Width="300"/> <!-- Metadata -->
        </Grid.ColumnDefinitions>
        
        <!-- COL 1: EXPLORER -->
        <Border Grid.Column="0" BorderBrush="#333333" BorderThickness="0,0,1,0" Background="#1E1E1E" AllowDrop="True">
             <i:Interaction.Triggers>
                <i:EventTrigger EventName="Drop">
                    <i:InvokeCommandAction Command="{Binding DropExplorerCommand}" PassEventArgsToCommand="True"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="EXPLORER" Style="{StaticResource HeaderStyle}"/>
                
                <TreeView Grid.Row="1" ItemsSource="{Binding Drives}" Background="Transparent" BorderThickness="0" Margin="5"
                          ItemTemplate="{StaticResource DriveTemplate}">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Setter Property="FontSize" Value="13"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            </Grid>
        </Border>

        <!-- COL 2: BROWSER -->
        <Border Grid.Column="1" Background="#121212" AllowDrop="True">
             <i:Interaction.Triggers>
                <i:EventTrigger EventName="Drop">
                    <i:InvokeCommandAction Command="{Binding DropMediaCommand}" PassEventArgsToCommand="True"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="MEDIA" Style="{StaticResource HeaderStyle}"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding FileList}" 
                         SelectedItem="{Binding SelectedMedia}"
                         Background="Transparent" BorderThickness="0" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="100" Height="120" Margin="5" Background="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Icon Area -->
                                <Grid Grid.Row="0">
                                    <!-- Base File Icon -->
                                    <Path Data="M13,9H18.5L13,3.5V9M6,2H14L20,8V20A2,2 0 0,1 18,22H6C4.89,22 4,21.1 4,20V4C4,2.89 4.89,2 6,2M15,18V13H13V18H15M11,18V13H9V18H11M7,18V13H5V18H7" 
                                          Fill="#555555" Stretch="Uniform" Margin="20"/>

                                    <!-- Hover/Playing Overlay -->
                                    <Grid x:Name="Overlay" Background="#AA000000" Visibility="Hidden">
                                         <Button Command="{Binding DataContext.PreviewFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                 CommandParameter="{Binding}"
                                                 Style="{StaticResource Style.Transport.Base}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 Width="40" Height="40" BorderBrush="White">
                                             <Grid>
                                                 <!-- Play Icon (Default) -->
                                                 <Path x:Name="PlayIcon" Data="M8,5.14V19.14L19,12.14L8,5.14Z" Fill="White" Stretch="Uniform" Margin="10" Visibility="Visible"/>
                                                 <!-- Stop Icon (Hidden) -->
                                                 <Path x:Name="StopIcon" Data="M6,6H18V18H6V6Z" Fill="#FF5252" Stretch="Uniform" Margin="12" Visibility="Collapsed"/>
                                             </Grid>
                                         </Button>
                                    </Grid>
                                </Grid>

                                <!-- Filename -->
                                <TextBlock Grid.Row="1" Text="{Binding Name}" TextTrimming="CharacterEllipsis" 
                                           Foreground="#DDDDDD" FontSize="11" HorizontalAlignment="Center" Margin="0,5,0,0" ToolTip="{Binding Name}"/>
                            
                            </Grid>
                            <DataTemplate.Triggers>
                                <!-- Show Overlay on Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Overlay" Property="Visibility" Value="Visible"/>
                                </Trigger>
                                
                                <!-- Show Overlay and Toggle Icons when Playing -->
                                <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                    <Setter TargetName="Overlay" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="PlayIcon" Property="Visibility" Value="Collapsed"/>
                                    <Setter TargetName="StopIcon" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- COL 3: METADATA -->
        <Border Grid.Column="2" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1,0,0,0" Background="{StaticResource Brush.Panel}" Padding="15" DataContext="{Binding SelectedMedia}">
            <Grid>
                 <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Focusable="False">
                    <StackPanel>
                        <TextBlock Text="METADATA" Margin="0,0,0,15" FontSize="{StaticResource Font.Size.SubHeader}" FontWeight="SemiBold"/>

                        <!-- LINK TO PLAYER BUTTON -->
                        <Button Command="{Binding DataContext.OpenInPlayerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Content="OPEN IN PLAYER"
                                Height="30" Margin="0,0,0,20"
                                Background="{StaticResource Brush.Accent}" Foreground="White" FontWeight="Bold"> 
                        <!-- Note: Binding to self (non-null) via converter? 
                             The DataContext here is 'SelectedMedia'. If it is null, this whole Border might need to be hidden or handled.
                             However, Button visibility: The BooleanToVisibilityConverter usually takes a bool. 
                             If we want to show/hide based on null, we need a NullToVisibilityConverter. 
                             OR: The border DataContext is SelectedMedia. If SelectedMedia is null, this binding fails? 
                             Actually, if SelectedMedia is null, the binding to DataContext might be null.
                             
                             Better approach: The Border itself should probably be hidden if nothing is selected.
                             Let's check the Border definition.
                             Border Grid.Column="2" ... DataContext="{Binding SelectedMedia}"
                             
                             If I just put the button there, it will try to resolve.
                             Let's make it simpler: The user wants the button to APPEAR.
                             If SelectedMedia is null, this Border is still visible (just with empty bindings).
                             
                             I will use a Style trigger on the Button to hide it if DataContext is null? 
                             Or simpler: Bind Visibility to a property 'IsSelected' on MediaItemViewModel? No.
                             
                             Let's use the fact that if we are here, we might have a selection.
                             But to be safe and robust:
                             I'll add a Style DataTrigger to the Button. 
                             Binding "{Binding}" (the MediaItemViewModel). If null, Hide.
                        -->
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        </Button>
    
                        <Grid Margin="0,5">
                             <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="SCENE" FontWeight="Bold" Opacity="0.6" Width="80" FontSize="{StaticResource Font.Size.Small}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.Scene}" TextWrapping="Wrap" FontSize="{StaticResource Font.Size.Body}" Foreground="White"/>
                        </Grid>
                        <Separator Margin="0,5"/>
    
                        <Grid Margin="0,5">
                             <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="TAKE" FontWeight="Bold" Opacity="0.6" Width="80" FontSize="{StaticResource Font.Size.Small}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.Take}" TextWrapping="Wrap" FontSize="{StaticResource Font.Size.Body}"/>
                        </Grid>
                         <Separator Margin="0,5"/>
    
                        <Grid Margin="0,5">
                             <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="START TC" FontWeight="Bold" Opacity="0.6" Width="80" FontSize="{StaticResource Font.Size.Small}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.TimecodeStart}" FontFamily="Consolas" FontSize="{StaticResource Font.Size.Body}"/>
                        </Grid>
                         <Separator Margin="0,5"/>
                        
                        <Grid Margin="0,5">
                             <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="DURATION" FontWeight="Bold" Opacity="0.6" Width="80" FontSize="{StaticResource Font.Size.Small}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.Duration}" FontFamily="Consolas" FontSize="{StaticResource Font.Size.Body}"/>
                        </Grid>
                        <Separator Margin="0,5"/>
    
                        <Grid Margin="0,5">
                             <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="FORMAT" FontWeight="Bold" Opacity="0.6" Width="80" FontSize="{StaticResource Font.Size.Small}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.Format}" FontSize="{StaticResource Font.Size.Body}"/>
                        </Grid>
                        <Separator Margin="0,5"/>
    
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ORIGINATOR" FontWeight="Bold" Opacity="0.6" Width="80" FontSize="{StaticResource Font.Size.Small}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.Originator}" TextWrapping="Wrap" FontSize="{StaticResource Font.Size.Body}"/>
                        </Grid>
                        <Separator Margin="0,5"/>
    
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="DATE" FontWeight="Bold" Opacity="0.6" Width="80" FontSize="{StaticResource Font.Size.Small}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.CreationDate}" TextWrapping="Wrap" FontSize="{StaticResource Font.Size.Body}"/>
                        </Grid>
                         <Separator Margin="0,5"/>
    
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="TAPE" FontWeight="Bold" Opacity="0.6" Width="80" FontSize="{StaticResource Font.Size.Small}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.Tape}" TextWrapping="Wrap" FontSize="{StaticResource Font.Size.Body}"/>
                        </Grid>
    
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
