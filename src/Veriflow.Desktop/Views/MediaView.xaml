<UserControl x:Class="Veriflow.Desktop.Views.MediaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1024">
    
    <!-- Keyboard shortcuts now handled at MainWindow level for persistence -->
    
    <!-- Keyboard shortcuts now handled at MainWindow level for persistence -->
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Add Converters for View Mode Switching -->
        <local:EnumToBoolConverter x:Key="EnumToBoolConverter" xmlns:local="clr-namespace:Veriflow.Desktop.Converters"/>
        <local:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" xmlns:local="clr-namespace:Veriflow.Desktop.Converters"/>
        <local:NullToBoolConverter x:Key="NullToBoolConverter" xmlns:local="clr-namespace:Veriflow.Desktop.Converters"/>

        <!-- View Mode Toggle Button Style -->
        <Style x:Key="ViewModeToggleStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource Brush.Control.Hover}"/>
                                <Setter Property="Foreground" Value="{StaticResource Brush.Text.Bright}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource Brush.Accent}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource Brush.Control.Pressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="TransparentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Folder Tree Item Style -->
        <HierarchicalDataTemplate x:Key="FolderTemplate" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <Path Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z" 
                      Fill="{StaticResource Brush.Icon.Folder}" Height="14" Width="14" Stretch="Uniform" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding Name}" Foreground="{StaticResource Brush.Text.Bright}" FontSize="13" Margin="5,0,0,0"/>
            </StackPanel>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate x:Key="DriveTemplate" ItemsSource="{Binding Folders}" ItemTemplate="{StaticResource FolderTemplate}">
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <Path Data="M6,2H18A2,2 0 0,1 20,4V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V4A2,2 0 0,1 6,2Z" 
                      Fill="{StaticResource Brush.Icon.Drive}" Height="14" Width="14" Stretch="Uniform" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" Margin="5,0,0,0"/>
            </StackPanel>
        </HierarchicalDataTemplate>

    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/> <!-- Explorer -->
            <ColumnDefinition Width="*"/>   <!-- Browser -->
            <ColumnDefinition Width="350"/> <!-- Metadata -->
        </Grid.ColumnDefinitions>
        
        <!-- COL 1: EXPLORER -->
        <Border Grid.Column="0" BorderBrush="{StaticResource Brush.Control}" BorderThickness="0,0,1,0" Background="{StaticResource Brush.Panel}" AllowDrop="True">
             <i:Interaction.Triggers>
                <i:EventTrigger EventName="Drop">
                    <i:InvokeCommandAction Command="{Binding DropExplorerCommand}" PassEventArgsToCommand="True"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="EXPLORER" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource Brush.Text.Secondary}" Margin="10,5"/>
                
                <TreeView Grid.Row="1" ItemsSource="{Binding Drives}" Background="Transparent" BorderThickness="0" Margin="5"
                          ItemTemplate="{StaticResource DriveTemplate}">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                            <!-- Foreground and FontSize are set in base style or can be overridden here. 
                                 Base style has Foreground={StaticResource Brush.Text} (Whiteish). 
                                 Original local style had #CCCCCC. I will keep local overrides if they are desired, 
                                 or remove them if they conflict. User said "Keep the existing setters". -->
                            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
                            <Setter Property="FontSize" Value="13"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            </Grid>
        </Border>

        <!-- COL 2: BROWSER -->
        <Border Grid.Column="1" Background="{StaticResource Brush.Background}" AllowDrop="True" Margin="20">
             <i:Interaction.Triggers>
                <i:EventTrigger EventName="Drop">
                    <i:InvokeCommandAction Command="{Binding DropMediaCommand}" PassEventArgsToCommand="True"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with Title and View Mode Toggle Buttons -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Title -->
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M13,3V9H21V3M13,21H21V11H13M3,21H11V15H3M3,3V13H11V3"
                              Fill="{DynamicResource Brush.Accent}"
                              Height="20" Width="20" Stretch="Uniform"
                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="MEDIA" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- View Mode Toggle Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <!-- Grid Mode Button -->
                        <RadioButton GroupName="ViewMode" 
                                     IsChecked="{Binding CurrentViewMode, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Grid}"
                                     ToolTip="Grid View"
                                     Style="{StaticResource ViewModeToggleStyle}">
                            <Path Data="M4,4H8V8H4V4M10,4H14V8H10V4M16,4H20V8H16V4M4,10H8V14H4V10M10,10H14V14H10V10M16,10H20V14H16V10M4,16H8V20H4V16M10,16H14V20H10V16M16,16H20V20H16V16Z" 
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                                  Stretch="Uniform" Width="16" Height="16"/>
                        </RadioButton>
                        
                        <!-- List Mode Button -->
                        <RadioButton GroupName="ViewMode" 
                                     IsChecked="{Binding CurrentViewMode, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=List}"
                                     ToolTip="List View"
                                     Style="{StaticResource ViewModeToggleStyle}">
                            <Path Data="M3,4H21V6H3V4M3,11H21V13H3V11M3,18H21V20H3V18Z" 
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                                  Stretch="Uniform" Width="16" Height="16"/>
                        </RadioButton>
                        
                        <!-- Filmstrip Mode Button -->
                        <RadioButton GroupName="ViewMode" 
                                     IsChecked="{Binding CurrentViewMode, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Filmstrip}"
                                     ToolTip="Filmstrip View"
                                     Style="{StaticResource ViewModeToggleStyle}">
                            <Path Data="M18,9H16V7H18M18,13H16V11H18M18,17H16V15H18M8,9H6V7H8M8,13H6V11H8M8,17H6V15H8M18,3V5H16V3H8V5H6V3H4V21H6V19H8V21H16V19H18V21H20V3H18Z" 
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                                  Stretch="Uniform" Width="16" Height="16"/>
                        </RadioButton>
                    </StackPanel>
                </Grid>

                <!-- MODE 1: GRID VIEW (Icon Grid) -->
                <ListBox Grid.Row="1" ItemsSource="{Binding FileList}" 
                         SelectedItem="{Binding SelectedMedia}"
                         Background="Transparent" BorderThickness="0" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Visibility="{Binding CurrentViewMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Grid}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="100" Height="120" Margin="5" Background="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Icon/Thumbnail Area -->
                                <Grid Grid.Row="0">
                                    <!-- Generic File Icon (Placeholder) -->
                                    <Path Data="M13,9H18.5L13,3.5V9M6,2H14L20,8V20A2,2 0 0,1 18,22H6C4.89,22 4,21.1 4,20V4C4,2.89 4.89,2 6,2M15,18V13H13V18H15M11,18V13H9V18H11M7,18V13H5V18H7" 
                                          Fill="{StaticResource Brush.Border.Light}" Stretch="Uniform" Margin="20"/>

                                    <!-- Video Thumbnail (Async Loaded) -->
                                    <Image Source="{Binding ThumbnailPath}" Stretch="UniformToFill" Margin="10" 
                                           RenderOptions.BitmapScalingMode="LowQuality"/>

                                    <!-- Hover/Playing Overlay -->
                                    <Grid x:Name="Overlay" Background="{StaticResource Brush.Overlay.Dark}" Visibility="Hidden">
                                         <Button Command="{Binding DataContext.PreviewFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                 CommandParameter="{Binding}"
                                                 Style="{StaticResource Style.Transport.Base}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 Width="40" Height="40" BorderBrush="White">
                                             <Grid>
                                                 <!-- Play Icon (Default) -->
                                                 <Path x:Name="PlayIcon" Data="M8,5.14V19.14L19,12.14L8,5.14Z" Fill="White" Stretch="Uniform" Margin="10" Visibility="Visible"/>
                                                 <!-- Stop Icon (Hidden) -->
                                                 <Path x:Name="StopIcon" Data="M6,6H18V18H6V6Z" Fill="{StaticResource Brush.Transport.Stop}" Stretch="Uniform" Margin="12" Visibility="Collapsed"/>
                                             </Grid>
                                         </Button>
                                    </Grid>
                                </Grid>

                                <!-- Filename -->
                                <TextBlock Grid.Row="1" Text="{Binding Name}" TextTrimming="CharacterEllipsis" 
                                           Foreground="{StaticResource Brush.Text.Bright}" FontSize="11" HorizontalAlignment="Center" Margin="0,5,0,0" ToolTip="{Binding Name}"/>
                            
                            </Grid>
                            <DataTemplate.Triggers>
                                <!-- Show Overlay on Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Overlay" Property="Visibility" Value="Visible"/>
                                </Trigger>
                                
                                <!-- Show Overlay and Toggle Icons when Playing -->
                                <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                    <Setter TargetName="Overlay" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="PlayIcon" Property="Visibility" Value="Collapsed"/>
                                    <Setter TargetName="StopIcon" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- MODE 2: LIST VIEW (DataGrid) -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding FileList}"
                          SelectedItem="{Binding SelectedMedia}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="Transparent"
                          Foreground="White"
                          Visibility="{Binding CurrentViewMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=List}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="*"/>
                        <DataGridTextColumn Header="Format" Binding="{Binding Format}" Width="*"/>
                        <DataGridTextColumn Header="Size" Binding="{Binding Length}" Width="*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding CreationTime, StringFormat='{}{0:yyyy-MM-dd}'}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- MODE 3: FILMSTRIP VIEW (List + Preview) -->
                <Grid Grid.Row="1" Visibility="{Binding CurrentViewMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Filmstrip}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left: Compact File List -->
                    <ListBox Grid.Column="0" ItemsSource="{Binding FileList}" 
                             SelectedItem="{Binding SelectedMedia}"
                             Background="Transparent" BorderThickness="0,0,1,0"
                             BorderBrush="{StaticResource Brush.Border}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,2" Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Small Thumbnail -->
                                    <Border Grid.Column="0" Width="32" Height="32" Background="{StaticResource Brush.Panel.Darker}">
                                        <Grid>
                                            <Path Data="M13,9H18.5L13,3.5V9M6,2H14L20,8V20A2,2 0 0,1 18,22H6C4.89,22 4,21.1 4,20V4C4,2.89 4.89,2 6,2M15,18V13H13V18H15M11,18V13H9V18H11M7,18V13H5V18H7" 
                                                  Fill="{StaticResource Brush.Border.Light}" Stretch="Uniform" Margin="6"/>
                                            <Image Source="{Binding ThumbnailPath}" Stretch="UniformToFill"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- File Info -->
                                    <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" 
                                                   Foreground="{StaticResource Brush.Text.Bright}" FontSize="12"/>
                                        <TextBlock Text="{Binding Duration}" 
                                                   Foreground="{StaticResource Brush.Text.Secondary}" FontSize="10"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Right: Large Preview + Metadata -->
                    <Grid Grid.Column="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Large Preview with Integrated VLC Viewer -->
                        <Border Grid.Row="0" Background="{StaticResource Brush.Panel.Darker}" 
                                BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>     <!-- Video viewer -->
                                    <RowDefinition Height="Auto"/>  <!-- Control buttons -->
                                </Grid.RowDefinitions>
                                
                                <!-- VLC Video Viewer (for video files) -->
                                <vlc:VideoView Grid.Row="0" MediaPlayer="{Binding DataContext.PreviewPlayer, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                    <vlc:VideoView.Style>
                                        <Style TargetType="vlc:VideoView">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <!-- Hide if not video mode -->
                                                <DataTrigger Binding="{Binding DataContext.IsVideoMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <!-- Hide if no media selected -->
                                                <DataTrigger Binding="{Binding DataContext.SelectedMedia, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </vlc:VideoView.Style>
                                </vlc:VideoView>
                                
                                <!-- Audio Waveform Placeholder (for audio files) -->
                                <Grid Grid.Row="0">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <!-- Show if audio mode and file selected -->
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding DataContext.IsVideoMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False"/>
                                                        <Condition Binding="{Binding DataContext.SelectedMedia, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToBoolConverter}}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Path Data="M13,9H18.5L13,3.5V9M6,2H14L20,8V20A2,2 0 0,1 18,22H6C4.89,22 4,21.1 4,20V4C4,2.89 4.89,2 6,2M15,18V13H13V18H15M11,18V13H9V18H11M7,18V13H5V18H7" 
                                          Fill="{StaticResource Brush.Border.Light}" Stretch="Uniform" Margin="80"/>
                                </Grid>
                                
                                <!-- Fallback when no file selected -->
                                <TextBlock Grid.Row="0" Text="Select a file to preview" 
                                           Foreground="{StaticResource Brush.Text.Disabled}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontSize="16">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.SelectedMedia, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                
                                <!-- Playback Control Buttons (Below Video) -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,15">
                                    <!-- PLAY Button (Green, Round, 40x40) -->
                                    <Button Command="{Binding DataContext.PlayFilmstripCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Tag="{Binding DataContext.IsVideoPlaying, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            ToolTip="Play (Space)"
                                            Width="40" Height="40" Margin="0,0,15,0">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource Style.Transport.Base}">
                                                <Setter Property="BorderBrush" Value="{DynamicResource Brush.Transport.Play}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource Brush.Transport.Play}"/>
                                            </Style>
                                        </Button.Style>
                                        <Path Data="M8,5.14V19.14L19,12.14L8,5.14Z" 
                                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                              Height="16" Width="16" Stretch="Uniform" Margin="2,0,0,0"/>
                                    </Button>
                                    
                                    <!-- STOP Button (Red, Round, 40x40) with PlayerView-style feedback -->
                                    <Button Command="{Binding DataContext.StopFilmstripCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Tag="{Binding DataContext.IsStopPressed, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            ToolTip="Stop"
                                            Width="40" Height="40">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource Style.Transport.Base}">
                                                <Setter Property="BorderBrush" Value="{DynamicResource Brush.Transport.Stop}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource Brush.Transport.Stop}"/>
                                            </Style>
                                        </Button.Style>
                                        <Path Data="M6,6H18V18H6V6Z" 
                                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                              Height="14" Width="14" Stretch="Uniform"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Metadata Summary -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding DataContext.SelectedMedia.Name, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="14" FontWeight="Bold" 
                                           Foreground="White" TextWrapping="Wrap" Margin="0,0,0,10"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Text="Duration:" Foreground="{StaticResource Brush.Text.Secondary}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding DataContext.SelectedMedia.Duration, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="White"/>
                                    
                                    <TextBlock Grid.Row="1" Text="Format:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DataContext.SelectedMedia.Format, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="White" Margin="0,5,0,0"/>
                                    
                                    <TextBlock Grid.Row="2" Text="Size:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DataContext.SelectedMedia.Length, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="White" Margin="0,5,0,0"/>
                                    
                                    <TextBlock Grid.Row="3" Text="Date:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DataContext.SelectedMedia.CreationTime, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Foreground="White" Margin="0,5,0,0"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>

                <!-- Drag & Drop Hint (Common to all modes) -->
                <TextBlock Grid.Row="1" 
                           VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Foreground="{StaticResource Brush.Text.Disabled}" FontSize="18" FontWeight="Bold"
                           IsHitTestVisible="False"
                           Panel.ZIndex="100">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="DROP VIDEO MEDIA FILE HERE"/>
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <!-- Visibility Trigger -->
                                <DataTrigger Binding="{Binding FileList.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <!-- Text Logic -->
                                <DataTrigger Binding="{Binding IsVideoMode}" Value="False">
                                    <Setter Property="Text" Value="DROP AUDIO MEDIA FILE HERE"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <!-- COL 3: METADATA -->
        <Border Grid.Column="2" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1,0,0,0" Background="{StaticResource Brush.Panel}" Padding="10" DataContext="{Binding SelectedMedia}">
            <Grid>
                 <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Buttons -->
                    <RowDefinition Height="*"/>    <!-- Layout -->
                    <RowDefinition Height="Auto"/> <!-- Footer -->
                </Grid.RowDefinitions>
                
                <!-- Action Buttons Area (Vertical Stack) -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <Button Command="{Binding DataContext.CreateReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Content="CREATE REPORT" Height="26" ToolTip="Start a new report with listed files" Margin="0,0,0,5"
                            Style="{StaticResource ContextualActionButtonStyle}"/>
                    
                    <Button Command="{Binding DataContext.AddToReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Content="ADD TO REPORT" Height="26" ToolTip="Add listed files to current report" Margin="0,0,0,20"
                            Style="{StaticResource ContextualActionButtonStyle}"
                            IsEnabled="{Binding DataContext.HasActiveReport, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <Button Command="{Binding DataContext.OpenInPlayerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Content="OPEN FILE IN PLAYER" Height="26" ToolTip="Open selected file in Player" Margin="0,0,0,20"
                            Style="{StaticResource ContextualActionButtonStyle}"/>
                    
                    <Button Command="{Binding DataContext.SendToSecureCopyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Content="SEND TO SECURE COPY" Height="26" ToolTip="Send selected folder to Secure Copy" Margin="0,0,0,20"
                            Style="{StaticResource ContextualActionButtonStyle}"/>

                    <Button Command="{Binding DataContext.SendFileToTranscodeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Content="SEND FILE TO TRANSCODE" Height="26" ToolTip="Send selected file to Transcode" Margin="0,0,0,5"
                            Style="{StaticResource ContextualActionButtonStyle}"/>

                    <Button Command="{Binding DataContext.SendToTranscodeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Content="SEND FOLDER TO TRANSCODE" Height="26" ToolTip="Send all files in folder to Transcode" Margin="0,0,0,5"
                            Style="{StaticResource ContextualActionButtonStyle}"/>


                </StackPanel>

                <!-- METADATA PANELS CONTAINER -->
                <Grid Grid.Row="1">
                    
                    <!-- AUDIO METADATA PANEL (Visible when IsVideoMode=False) -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ScrollViewer.Style>
                            <Style TargetType="ScrollViewer">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.IsVideoMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ScrollViewer.Style>


                        <StackPanel>
                            <!-- 1. GENERAL INFO -->
                            <Expander Header="GENERAL INFO" IsExpanded="True" Style="{StaticResource ProExpanderStyle}">
                                <Grid Margin="5,0,5,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Text="Name:" Foreground="{StaticResource Brush.Text.Secondary}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.FullPath}" TextWrapping="Wrap" Foreground="White" ToolTip="{Binding CurrentMetadata.FullPath}"/>
                                    
                                    <TextBlock Grid.Row="1" Text="Project:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentMetadata.Project}" Foreground="White" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="2" Text="Scene:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentMetadata.Scene}" Foreground="White" FontWeight="Bold" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="3" Text="Take:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentMetadata.Take}" Foreground="White" FontWeight="Bold" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="4" Text="Tape:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentMetadata.Tape}" Foreground="White" Margin="0,2,0,0"/>
                                    
                                    <TextBlock Grid.Row="5" Text="Date:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CurrentMetadata.CreationDate}" Foreground="White" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="6" Text="Size:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding CurrentMetadata.FileSize}" Foreground="White" Margin="0,5,0,0"/>
                                </Grid>
                            </Expander>
    
                            <!-- 2. RECORDING INFO -->
                            <Expander Header="RECORDING INFO" IsExpanded="True" Style="{StaticResource ProExpanderStyle}">
                                <Grid Margin="5,0,5,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Sample Rate:" Foreground="{StaticResource Brush.Text.Secondary}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.SampleRateString}" Foreground="White"/>

                                    <TextBlock Grid.Row="1" Text="Bit Depth:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentMetadata.BitDepthString}" Foreground="White" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="2" Text="Frame Rate:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentMetadata.FrameRate}" Foreground="White" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="3" Text="Start TC:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentMetadata.TimecodeStart}" FontFamily="Consolas" Foreground="White" FontWeight="Bold" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="4" Text="Length:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentMetadata.Duration}" FontFamily="Consolas" Foreground="White" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="5" Text="User Bits:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CurrentMetadata.UBits}" FontFamily="Consolas" Foreground="White" Margin="0,2,0,0"/>
                                    
                                    <TextBlock Grid.Row="6" Text="Bitrate:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding CurrentMetadata.Bitrate}" Foreground="White" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="7" Text="Bitrate Mode:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding CurrentMetadata.BitrateMode}" Foreground="White" Margin="0,2,0,0"/>
                                </Grid>
                            </Expander>

                        <!-- 3. TECHNICAL INFO -->
                        <Expander Header="TECHNICAL INFO" IsExpanded="True" Style="{StaticResource ProExpanderStyle}">
                            <Grid Margin="5,0,5,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="110"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Container:" Foreground="{StaticResource Brush.Text.Secondary}"/>
                                <TextBlock Grid.Column="1" Text="{Binding CurrentMetadata.ContainerFormat}" Foreground="White"/>

                                <TextBlock Grid.Row="1" Text="Codec:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentMetadata.CodecName}" Foreground="White" Margin="0,2,0,0"/>

                                <TextBlock Grid.Row="2" Text="Channels:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentMetadata.ChannelCountString}" Foreground="White" Margin="0,2,0,0"/>
                            </Grid>
                        </Expander>
    
                            <!-- 3. TRACK INFO -->
                            <Expander Header="TRACK INFO" IsExpanded="True" Style="{StaticResource ProExpanderStyle}">
                                <DataGrid ItemsSource="{Binding CurrentMetadata.Tracks}" 
                                          AutoGenerateColumns="False" 
                                          CanUserAddRows="False" 
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="Horizontal"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          RowBackground="Transparent"
                                          Foreground="White"
                                          Margin="0,0,20,10">
                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource Brush.Control.Hover}"/>
                                            <Setter Property="Padding" Value="5,2"/>
                                        </Style>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Padding" Value="2"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="DataGridCell">
                                                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DataGrid.Resources>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="#" Binding="{Binding ChannelIndex}" Width="30"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Function" Binding="{Binding Function}" Width="90"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- VIDEO METADATA PANEL (Visible when IsVideoMode=True) -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ScrollViewer.Style>
                            <Style TargetType="ScrollViewer">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.IsVideoMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ScrollViewer.Style>


                        <StackPanel>


                            <!-- 1. FILE INFO -->
                            <Expander Header="FILE INFO" IsExpanded="True" Style="{StaticResource ProExpanderStyle}">
                                <Grid Margin="5,0,5,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Text="Name:" Foreground="{StaticResource Brush.Text.Secondary}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentVideoMetadata.Filename}" TextTrimming="CharacterEllipsis" Foreground="White"/>
                                    
                                    <TextBlock Grid.Row="1" Text="Container:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Container}" Foreground="White" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="2" Text="Size:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Size}" Foreground="White" Margin="0,2,0,0"/>
                                    
                                    <TextBlock Grid.Row="3" Text="Duration:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Duration}" FontFamily="Consolas" Foreground="White" Margin="0,2,0,0"/>
                                </Grid>
                            </Expander>

                            <!-- 2. VIDEO STREAM -->
                            <Expander Header="VIDEO STREAM" IsExpanded="True" Style="{StaticResource ProExpanderStyle}">
                                <Grid Margin="5,0,5,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Codec:" Foreground="{StaticResource Brush.Text.Secondary}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentVideoMetadata.Codec}" TextWrapping="Wrap" Foreground="White"/>

                                    <TextBlock Grid.Row="1" Text="Resolution:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Resolution}" Foreground="White" FontWeight="Bold" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="2" Text="Aspect Ratio:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentVideoMetadata.AspectRatio}" Foreground="White" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="3" Text="Frame Rate:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentVideoMetadata.FrameRate}" Foreground="White" FontWeight="Bold" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="4" Text="Bit Depth:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentVideoMetadata.BitDepth}" Foreground="White" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="5" Text="Chroma:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CurrentVideoMetadata.ChromaSubsampling}" Foreground="White" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="6" Text="Color Space:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding CurrentVideoMetadata.ColorSpace}" Foreground="White" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="7" Text="Scan Type:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding CurrentVideoMetadata.ScanType}" Foreground="White" Margin="0,2,0,0"/>

                                    <TextBlock Grid.Row="8" Text="GOP Struct:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding CurrentVideoMetadata.GopStructure}" Foreground="White" Margin="0,2,0,0"/>
                                    
                                    <TextBlock Grid.Row="9" Text="Bitrate:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Bitrate}" Foreground="White" Margin="0,2,0,0"/>
                                </Grid>
                            </Expander>

                            <!-- 3. AUDIO & TIMECODE -->
                            <Expander Header="AUDIO &amp; TIMECODE" IsExpanded="True" Style="{StaticResource ProExpanderStyle}">
                                <Grid Margin="5,0,5,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Audio Format:" Foreground="{StaticResource Brush.Text.Secondary}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentVideoMetadata.AudioFormat}" Foreground="White"/>

                                    <TextBlock Grid.Row="1" Text="Channels:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentVideoMetadata.AudioChannels}" Foreground="White" Margin="0,2,0,0"/>
                                    
                                    <TextBlock Grid.Row="2" Text="Start TC:" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentVideoMetadata.StartTimecode}" FontFamily="Consolas" Foreground="White" FontWeight="Bold" Margin="0,2,0,0"/>
                                </Grid>

                            </Expander>
                         </StackPanel>
                    </ScrollViewer>
                </Grid>

                <Button Grid.Row="2" Command="{Binding DataContext.EditMetadataCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Content="EDIT METADATA" Height="26" ToolTip="Edit metadata for selected media" Margin="0,10,0,0"
                        Style="{StaticResource ContextualActionButtonStyle}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
