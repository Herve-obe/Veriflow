<Window x:Class="Veriflow.Desktop.Views.QuickEditReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Quick Edit Report" Height="350" Width="400"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False" UseLayoutRounding="True"
        Style="{StaticResource Style.Window.Dialog}">
    
    <Window.Resources>
        <Style TargetType="TextBox" BasedOn="{StaticResource Style.TextBox.Form}"/>
        <Style TargetType="TextBlock" BasedOn="{StaticResource Style.Text.Label}"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Scene / Take -->
            <RowDefinition Height="Auto"/> <!-- Good Take -->
            <RowDefinition Height="*"/>    <!-- Notes -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Scene / Take -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="SCENE" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Scene, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="TAKE" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Take, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </Grid>

        <!-- Good Take -->
        <CheckBox Grid.Row="2" Content="GOOD TAKE (CIRCLE)" IsChecked="{Binding IsCircled}" Foreground="White" Margin="0,0,0,15">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
            </CheckBox.LayoutTransform>
        </CheckBox>

        <!-- Notes -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="NOTES" Margin="0,0,0,5"/>
            <TextBox x:Name="NotesTextBox"
                     Text="{Binding ItemNotes, UpdateSourceTrigger=PropertyChanged}" 
                     Height="80" TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalContentAlignment="Top"
                     PreviewKeyDown="NotesTextBox_PreviewKeyDown"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="CANCEL" Click="CancelButton_Click" Style="{StaticResource Style.Button.Secondary}" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="SAVE" Click="SaveButton_Click" Style="{StaticResource Style.Button.Primary}" Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
