<UserControl x:Class="Veriflow.Desktop.Views.SecureCopyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:shared="clr-namespace:Veriflow.Desktop.Views.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
             
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>


    <!-- MAIN SPLIT LAYOUT -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/> <!-- Explorer -->
            <ColumnDefinition Width="*"/>   <!-- Form -->
        </Grid.ColumnDefinitions>

        <!-- LEFT: EXPLORER -->
        <shared:ExplorerView Grid.Column="0"/>

        <!-- RIGHT: EXISTING FORM -->
        <Border Grid.Column="1" Background="{DynamicResource Brush.Background}" Margin="20">
            <!-- ORIGINAL GRID CONTENT -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- HEADER -->
                    <RowDefinition Height="140"/>   <!-- TOP SPACE (Fixed for stable toggle pos) -->
                    <RowDefinition Height="Auto"/> <!-- FORM -->
                    <RowDefinition Height="2*"/>   <!-- BOTTOM SPACE -->
                    <RowDefinition Height="Auto"/> <!-- FOOTER -->
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                         <Path Data="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M12,5A3,3 0 1,1 9,8A3,3 0 0,1 12,5M17.13,17C15.92,18.85 14.11,20.24 12,20.92C9.89,20.24 8.08,18.85 6.87,17C6.53,16.5 6.24,16 6,15.47C6,13.82 8.71,12.47 12,12.47C15.29,12.47 18,13.82 18,15.47C17.76,16 17.47,16.5 17.13,17Z"
                               Fill="{DynamicResource Brush.Accent}"
                               Height="20" Width="20" Stretch="Uniform"
                               VerticalAlignment="Center" Margin="0,0,20,0"/>
                         <TextBlock Text="SECURE COPY" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- MODE SWITCHER (Moved to Row 1, Center Bottom) -->
                <!-- FIXED POSITIONING: Uses VerticalAlignment=Bottom of a FIXED HEIGHT row to prevent jumping -->
                <Grid Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10">
                     <StackPanel Orientation="Horizontal">
                         
                         <!-- OFFLOAD BUTTON -->
                         <Button Command="{Binding SwitchToOffloadCommand}" Width="120" Height="26" Margin="0,0,10,0">
                             <Button.Style>
                                 <Style TargetType="Button" BasedOn="{StaticResource ViewModeToggleStyle}">
                                     <Style.Triggers>
                                         <DataTrigger Binding="{Binding IsOffloadMode}" Value="True">
                                             <Setter Property="Opacity" Value="1.0"/>
                                         </DataTrigger>
                                     </Style.Triggers>
                                 </Style>
                             </Button.Style>
                             <StackPanel Orientation="Horizontal">
                                 <Path Data="M18,8L12,2H4A2,2 0 0,0 2,4V20A2,2 0 0,0 4,22H20A2,2 0 0,0 22,20V8H18M13,9H11V4H13V9M9,9H7V4H9V9"
                                       Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       Width="14" Height="14" Stretch="Uniform" Margin="0,0,6,0"/>
                                 <TextBlock Text="Offload"/>
                             </StackPanel>
                         </Button>
                         
                         <!-- VERIFY BUTTON -->
                         <Button Command="{Binding SwitchToVerifyCommand}" Width="120" Height="26">
                             <Button.Style>
                                 <Style TargetType="Button" BasedOn="{StaticResource ViewModeToggleStyle}">
                                     <Style.Triggers>
                                         <DataTrigger Binding="{Binding IsVerifyMode}" Value="True">
                                             <Setter Property="Opacity" Value="1.0"/>
                                         </DataTrigger>
                                     </Style.Triggers>
                                 </Style>
                             </Button.Style>
                             <StackPanel Orientation="Horizontal">
                                 <Path Data="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M10,17L6,13L7.41,11.59L10,14.17L16.59,7.58L18,9L10,17Z"
                                       Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       Width="14" Height="14" Stretch="Uniform" Margin="0,0,6,0"/>
                                 <TextBlock Text="Verify"/>
                             </StackPanel>
                         </Button>
                         
                     </StackPanel>
                </Grid>

                <!-- FORM CONTENT -->
                <StackPanel Grid.Row="2" HorizontalAlignment="Stretch" MaxWidth="1200" Margin="40,0">
                    
                    <!-- OFFLOAD FORM -->
                    <StackPanel Visibility="{Binding IsOffloadMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <!-- SOURCE -->
                        <Grid Margin="0,0,0,25">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <DockPanel LastChildFill="False" Margin="0,0,0,5">
                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                    <!-- SD Card Icon (Vector) -->
                                    <Path Data="M18,8L12,2H4A2,2 0 0,0 2,4V20A2,2 0 0,0 4,22H20A2,2 0 0,0 22,20V8H18M13,9H11V4H13V9M9,9H7V4H9V9"
                                          Fill="{DynamicResource Brush.Accent}"
                                          Height="24" Width="24" Stretch="Uniform"
                                          VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="MEDIA SOURCE" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Global Reset Button -->
                                <Button DockPanel.Dock="Right" 
                                        Command="{Binding ResetAllCommand}"
                                        Style="{StaticResource ContextualActionButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="M12,4C14.1,4 16.1,4.8 17.6,6.3C20.7,9.4 20.7,14.5 17.6,17.6C15.8,19.5 13.3,20.4 10.9,20.3V22.3C13.9,22.4 17,21.3 19.2,19.1C23.1,15.2 23.1,8.7 19.2,4.8C17.3,2.9 14.7,2 12,2C9.3,2 6.7,2.9 4.8,4.8C0.9,8.7 0.9,15.2 4.8,19.1C6.7,21 9.3,21.9 12,21.9V19.9C9.7,19.9 7.5,19 5.9,17.4C3.1,14.6 3.1,10.1 5.9,7.3C7.5,5.8 9.6,4.9 12,4.9V4Z"
                                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                              Width="12" Height="12" Stretch="Uniform" Margin="0,0,4,0"/>
                                        <TextBlock Text="Reset All"/>
                                    </StackPanel>
                                </Button>
                            </DockPanel>
                            
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Grid Grid.Column="0" Margin="0,0,5,0">
                                    <TextBox x:Name="SourceBox" Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}" AllowDrop="True">
                                         <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PreviewDragOver">
                                                <i:InvokeCommandAction Command="{Binding DragOverCommand}" PassEventArgsToCommand="True"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="PreviewDrop">
                                                <i:InvokeCommandAction Command="{Binding DropSourceCommand}" PassEventArgsToCommand="True"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>
                                    
                                    <!-- Clear Button Source -->
                                    <Button Command="{Binding ClearSourceCommand}"
                                            Content="✕" 
                                            HorizontalAlignment="Right" Margin="0,0,5,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ClearFieldButtonStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text.Length, ElementName=SourceBox}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Text, ElementName=SourceBox}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                    </Button>
                                </Grid>
                                
                                <Button Grid.Column="1" Command="{Binding PickSourceCommand}" 
                                        Style="{StaticResource ContextualActionButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2.89,4 4,4H10L12,6H19A2,2 0 0,0 21,8H21L4,8V18L6.14,10H23.21L20.93,18.5C20.7,19.37 19.92,20 19,20Z"
                                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                              Width="14" Height="14" Stretch="Uniform" Margin="0,0,6,0"/>
                                        <TextBlock Text="Open"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Grid>
    
                        <!-- DESTINATIONS -->
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                 <!-- Hard Drive Icon (Vector) -->
                                <Path Data="M6,2H18A2,2 0 0,1 20,4V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V4A2,2 0 0,1 6,2M12,18A2,2 0 0,0 14,16A2,2 0 0,0 12,14A2,2 0 0,0 10,16A2,2 0 0,0 12,18M6,4V10H18V4H6Z"
                                      Fill="{DynamicResource Brush.Accent}"
                                      Height="24" Width="24" Stretch="Uniform"
                                      VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="DESTINATION" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
                            </StackPanel>
    
                            <!-- Dest A -->
                            <Grid Margin="0,0,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="MAIN DESTINATION (A)" Margin="0,0,0,3" Style="{StaticResource LabelStyle}" Opacity="0.5"/>
                                
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Grid Grid.Column="0" Margin="0,0,5,0">
                                        <TextBox x:Name="Dest1Box" Text="{Binding Destination1Path, UpdateSourceTrigger=PropertyChanged}" AllowDrop="True">
                                             <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="PreviewDragOver">
                                                    <i:InvokeCommandAction Command="{Binding DragOverCommand}" PassEventArgsToCommand="True"/>
                                                </i:EventTrigger>
                                                <i:EventTrigger EventName="PreviewDrop">
                                                    <i:InvokeCommandAction Command="{Binding DropDest1Command}" PassEventArgsToCommand="True"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>
    
                                        <Button Command="{Binding ClearDest1Command}"
                                                Content="✕" 
                                                HorizontalAlignment="Right" Margin="0,0,5,0">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource ClearFieldButtonStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Text.Length, ElementName=Dest1Box}" Value="0">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Text, ElementName=Dest1Box}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                        </Button>
                                    </Grid>
    
                                    <Button Grid.Column="1" Command="{Binding PickDest1Command}" 
                                            Style="{StaticResource ContextualActionButtonStyle}">
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2.89,4 4,4H10L12,6H19A2,2 0 0,0 21,8H21L4,8V18L6.14,10H23.21L20.93,18.5C20.7,19.37 19.92,20 19,20Z"
                                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                  Width="14" Height="14" Stretch="Uniform" Margin="0,0,6,0"/>
                                            <TextBlock Text="Open"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Grid>
    
                            <!-- Dest B -->
                            <Grid>
                                 <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="SECONDARY DESTINATION (B)" Margin="0,0,0,3" Style="{StaticResource LabelStyle}" Opacity="0.5"/>
                                
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Grid Grid.Column="0" Margin="0,0,5,0">
                                        <TextBox x:Name="Dest2Box" Text="{Binding Destination2Path, UpdateSourceTrigger=PropertyChanged}" AllowDrop="True">
                                             <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="PreviewDragOver">
                                                    <i:InvokeCommandAction Command="{Binding DragOverCommand}" PassEventArgsToCommand="True"/>
                                                </i:EventTrigger>
                                                <i:EventTrigger EventName="PreviewDrop">
                                                    <i:InvokeCommandAction Command="{Binding DropDest2Command}" PassEventArgsToCommand="True"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>
    
                                        <!-- Clear Button Dest 2 -->
                                        <Button Command="{Binding ClearDest2Command}"
                                                Content="✕" 
                                                HorizontalAlignment="Right" Margin="0,0,5,0">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource ClearFieldButtonStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Text.Length, ElementName=Dest2Box}" Value="0">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Text, ElementName=Dest2Box}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                        </Button>
                                    </Grid>
    
                                    <Button Grid.Column="1" Command="{Binding PickDest2Command}" 
                                            Style="{StaticResource ContextualActionButtonStyle}">
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2.89,4 4,4H10L12,6H19A2,2 0 0,0 21,8H21L4,8V18L6.14,10H23.21L20.93,18.5C20.7,19.37 19.92,20 19,20Z"
                                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                  Width="14" Height="14" Stretch="Uniform" Margin="0,0,6,0"/>
                                            <TextBlock Text="Open"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <!-- VERIFY FORM -->
                    <StackPanel Visibility="{Binding IsVerifyMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid Margin="0,0,0,25">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <DockPanel LastChildFill="False" Margin="0,0,0,5">
                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                    <Path Data="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z"
                                          Fill="{DynamicResource Brush.Accent}"
                                          Height="24" Width="24" Stretch="Uniform"
                                          VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="VERIFICATION TARGET" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <Button DockPanel.Dock="Right" 
                                        Command="{Binding ResetAllCommand}"
                                        Style="{StaticResource ContextualActionButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="M12,4C14.1,4 16.1,4.8 17.6,6.3C20.7,9.4 20.7,14.5 17.6,17.6C15.8,19.5 13.3,20.4 10.9,20.3V22.3C13.9,22.4 17,21.3 19.2,19.1C23.1,15.2 23.1,8.7 19.2,4.8C17.3,2.9 14.7,2 12,2C9.3,2 6.7,2.9 4.8,4.8C0.9,8.7 0.9,15.2 4.8,19.1C6.7,21 9.3,21.9 12,21.9V19.9C9.7,19.9 7.5,19 5.9,17.4C3.1,14.6 3.1,10.1 5.9,7.3C7.5,5.8 9.6,4.9 12,4.9V4Z"
                                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                              Width="12" Height="12" Stretch="Uniform" Margin="0,0,4,0"/>
                                        <TextBlock Text="Reset"/>
                                    </StackPanel>
                                </Button>
                            </DockPanel>
                            
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Grid Grid.Column="0" Margin="0,0,5,0">
                                    <TextBox x:Name="VerifyBox" Text="{Binding VerifyPath, UpdateSourceTrigger=PropertyChanged}" AllowDrop="True">
                                         <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PreviewDragOver">
                                                <i:InvokeCommandAction Command="{Binding DragOverCommand}" PassEventArgsToCommand="True"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="PreviewDrop">
                                                <i:InvokeCommandAction Command="{Binding DropVerifyCommand}" PassEventArgsToCommand="True"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>
                                    
                                    <Button Command="{Binding ClearVerifyCommand}"
                                            Content="✕" 
                                            HorizontalAlignment="Right" Margin="0,0,5,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ClearFieldButtonStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text.Length, ElementName=VerifyBox}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Text, ElementName=VerifyBox}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                    </Button>
                                </Grid>
                                
                                <Button Grid.Column="1" Command="{Binding PickVerifyCommand}" 
                                        Style="{StaticResource ContextualActionButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2.89,4 4,4H10L12,6H19A2,2 0 0,0 21,8H21L4,8V18L6.14,10H23.21L20.93,18.5C20.7,19.37 19.92,20 19,20Z"
                                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                              Width="14" Height="14" Stretch="Uniform" Margin="0,0,6,0"/>
                                        <TextBlock Text="Open Folder"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Grid>
                        <TextBlock Text="Select the folder containing the files and the MHL file to verify." 
                                   Foreground="{StaticResource Brush.Text.Disabled}" 
                                   FontStyle="Italic" Margin="0,-15,0,0"/>

                    </StackPanel>
                </StackPanel>

                <!-- FOOTER ACTIONS -->
                <StackPanel Grid.Row="4" VerticalAlignment="Bottom" Margin="0,0,0,30">
                    <!-- OFFLOAD: Start Command -->
                    <Button Command="{Binding ToggleCopyCommand}" 
                            Visibility="{Binding IsOffloadMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Center" Width="400">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryActionButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource Brush.Error.Dark}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource Brush.Error.Dark}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Orientation" Value="Horizontal"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Path Data="M8,5V19L19,12M5,5H11V19H5V5Z"
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                                <TextBlock Text="Start Copy" FontSize="{StaticResource Font.Size.Body}" FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Orientation" Value="Horizontal"/>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Path Data="M6,19H10V5H6M14,5H18V19H14V5Z"
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                                <TextBlock Text="Stop Copy" FontSize="{StaticResource Font.Size.Body}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </Button>
                    
                    <!-- VERIFY: Start Command -->
                    <Button Command="{Binding StartVerifyCommand}" 
                            Visibility="{Binding IsVerifyMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Center" Width="400">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryActionButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Grid>
                             <StackPanel Orientation="Horizontal">
                                <Path Data="M9,16.17L4.83,12L3.41,13.41L9,19L21,7L19.59,5.59L9,16.17Z"
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                                <TextBlock Text="Verify" FontSize="{StaticResource Font.Size.Body}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </Button>
                    <!-- Stop Button for Verify (reusing logic might be cleaner but separate button ok for now) -->
                    <!-- Cancelling support for verify not fully wired in VM 'ToggleCopyCommand' but we used '_cts' and 'IsBusy' in VM logic so we could allow cancel. 
                         For now, no Stop button for Verify in V1. -->
                    
                    <ProgressBar Value="{Binding ProgressValue}" Maximum="100" Height="4" Background="{StaticResource Brush.Panel.Header}" Foreground="{DynamicResource Brush.Accent}" BorderThickness="0" IsIndeterminate="False"/>
                    
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentHashDisplay}" TextTrimming="CharacterEllipsis" FontSize="{StaticResource Font.Size.Body}" FontWeight="Bold" Foreground="{StaticResource Brush.Text}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding LogText}" Margin="10,0,0,0" FontSize="{StaticResource Font.Size.Body}" FontWeight="Bold" Foreground="{StaticResource Brush.Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                             <TextBlock Text="ETA: " FontWeight="Bold" FontSize="{StaticResource Font.Size.Body}" Foreground="{StaticResource Brush.Text}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                             <TextBlock Text="{Binding TimeRemainingDisplay}" FontWeight="Bold" FontSize="{StaticResource Font.Size.Body}" Foreground="{StaticResource Brush.Text}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" Text="{Binding CurrentSpeedDisplay}" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"
                                   FontSize="{StaticResource Font.Size.Body}" Foreground="{StaticResource Brush.Text}"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
