<Window x:Class="Veriflow.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Veriflow.Desktop"
        xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
        xmlns:views="clr-namespace:Veriflow.Desktop.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Veriflow" Height="768" Width="1024"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        KeyDown="Window_KeyDown">

    <Window.InputBindings>
        <!-- Removing static binding in favor of code-behind for robust focus handling -->
        <!-- <KeyBinding Key="Space" Command="{Binding CurrentViewModel.TogglePlayPauseCommand}" /> -->
    </Window.InputBindings>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <materialDesign:Card Grid.Column="0" Margin="0" Padding="0" UniformCornerRadius="0" Background="{DynamicResource MaterialDesignPaper}">
            <StackPanel Margin="10">
                <TextBlock Text="VERIFLOW" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                
                <Button Command="{Binding NavigatePlayerCommand}" Content="DERUSH MÉDIAS" Margin="0,5" Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left"/>
                <Button Command="{Binding NavigateOffloadCommand}" Content="SECURE COPY" Margin="0,5" Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left"/>
                <Button Command="{Binding NavigateReportsCommand}" Content="REPORTS" Margin="0,5" Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left"/>
            </StackPanel>
        </materialDesign:Card>

        <Border Grid.Column="1" Background="{DynamicResource MaterialDesignBackground}" Padding="20">
            <ContentControl Content="{Binding CurrentView}" />
        </Border>
    </Grid>
</Window>