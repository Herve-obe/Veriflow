                            <Button x:Name="PART_HeaderButton" Grid.Column="1" Focusable="False" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}"/>
                            <Button x:Name="PART_NextButton" Grid.Column="2" Focusable="False" HorizontalAlignment="Right" Width="28" Height="28" Style="{StaticResource MenuButtonStyle}" Content="&gt;"/>
