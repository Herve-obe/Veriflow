<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Veriflow.Avalonia.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
        x:Class="Veriflow.Avalonia.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Veriflow [BETA] - v1.0 (Avalonia)"
        Width="1400" Height="900"
        MinWidth="1200" MinHeight="700"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="40"
        Background="{StaticResource Brush.Background.Primary}">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid RowDefinitions="40,*,60">
        <!-- Chromeless Title Bar (Google/VS Code Style) -->
        <Grid Grid.Row="0" Classes="ChromelessTitleBar">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>  <!-- Icon -->
                <ColumnDefinition Width="Auto"/>  <!-- Menu -->
                <ColumnDefinition Width="*"/>     <!-- Center Title -->
                <ColumnDefinition Width="46"/>    <!-- Minimize -->
                <ColumnDefinition Width="46"/>    <!-- Maximize -->
                <ColumnDefinition Width="46"/>    <!-- Close -->
            </Grid.ColumnDefinitions>
            
            <!-- App Icon -->
            <Image Grid.Column="0"
                   Classes="AppIcon"
                   Source="/Assets/veriflow.ico"/>
            
            <!-- Menu Bar -->
            <Menu Grid.Column="1" Classes="TitleBarMenu">
                <MenuItem Header="File">
                    <MenuItem Header="New"/>
                    <MenuItem Header="Open..."/>
                    <Separator/>
                    <MenuItem Header="Save"/>
                    <MenuItem Header="Save As..."/>
                    <Separator/>
                    <MenuItem Header="Exit"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Undo"/>
                    <MenuItem Header="Redo"/>
                    <Separator/>
                    <MenuItem Header="Cut"/>
                    <MenuItem Header="Copy"/>
                    <MenuItem Header="Paste"/>
                </MenuItem>
                <MenuItem Header="View">
                    <MenuItem Header="Offload"/>
                    <MenuItem Header="Transcode"/>
                    <MenuItem Header="Sync"/>
                    <MenuItem Header="Media"/>
                    <MenuItem Header="Reports"/>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="Documentation"/>
                    <MenuItem Header="About"/>
                </MenuItem>
            </Menu>
            
            <!-- Centered Title -->
            <TextBlock Grid.Column="2"
                       Classes="CenteredTitle"
                       Text="VERIFLOW - Antigravity - Migration Complete"/>
            
            <!-- Minimize Button -->
            <Button Grid.Column="3"
                    Classes="WindowControlButton"
                    Click="MinimizeButton_Click"
                    ToolTip.Tip="Minimize">
                <TextBlock Text="â€”" Classes="WindowControlIcon Minimize"/>
            </Button>
            
            <!-- Maximize/Restore Button -->
            <Button Grid.Column="4"
                    x:Name="MaximizeButton"
                    Classes="WindowControlButton"
                    Click="MaximizeButton_Click"
                    ToolTip.Tip="Maximize">
                <TextBlock x:Name="MaximizeIcon"
                          Text="ðŸ—–"
                          Classes="WindowControlIcon Maximize"/>
            </Button>
            
            <!-- Close Button -->
            <Button Grid.Column="5"
                    Classes="WindowControlButton CloseButton"
                    Click="CloseButton_Click"
                    ToolTip.Tip="Close">
                <TextBlock Text="âœ•" Classes="WindowControlIcon Close"/>
            </Button>
        </Grid>
        
        <!-- Content Area -->
        <ContentControl Grid.Row="1" 
                        Content="{Binding CurrentViewModel}"
                        Background="{StaticResource Brush.Background.Primary}"/>
        
        <!-- Bottom Navigation Bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource Brush.Background.Secondary}"
                BorderBrush="{StaticResource Brush.Border}"
                BorderThickness="0,1,0,0">
            
            <UniformGrid Rows="1" Columns="6">
                
                <!-- F1 - Offload (Secure Copy) -->
                <RadioButton Classes="NavButton"
                             GroupName="Navigation"
                             Content="OFFLOAD (F1)"
                             IsChecked="{Binding IsOffloadPage}"
                             Command="{Binding NavigateToOffloadCommand}"/>
                
                <!-- F2 - Media -->
                <RadioButton Classes="NavButton"
                             GroupName="Navigation"
                             Content="MEDIA (F2)"
                             IsChecked="{Binding IsMediaPage}"
                             Command="{Binding NavigateToMediaCommand}"/>
                
                <!-- F3 - Player -->
                <RadioButton Classes="NavButton"
                             GroupName="Navigation"
                             Content="PLAYER (F3)"
                             IsChecked="{Binding IsPlayerPage}"
                             Command="{Binding NavigateToPlayerCommand}"/>
                
                <!-- F4 - Sync -->
                <RadioButton Classes="NavButton"
                             GroupName="Navigation"
                             Content="SYNC (F4)"
                             IsChecked="{Binding IsSyncPage}"
                             Command="{Binding NavigateToSyncCommand}"/>
                
                <!-- F5 - Transcode -->
                <RadioButton Classes="NavButton"
                             GroupName="Navigation"
                             Content="TRANSCODE (F5)"
                             IsChecked="{Binding IsTranscodePage}"
                             Command="{Binding NavigateToTranscodeCommand}"/>
                
                <!-- F6 - Reports -->
                <RadioButton Classes="NavButton"
                             GroupName="Navigation"
                             Content="REPORTS (F6)"
                             IsChecked="{Binding IsReportsPage}"
                             Command="{Binding NavigateToReportsCommand}"/>
                
            </UniformGrid>
        </Border>
        
    </Grid>
    
</Window>
